<div class="container">
  <div class="row">
    <div class="dt-sc-column">
      <form action="#" class="dT_CompareListGrid" id="dT_CompareListGrid">
        <div class="cart_empty_msg" v-if="isNoRecords">
          <img src="{{ "empty-cart.png" | asset_url }}" alt="{{ 'cart.general.empty' | t }}" />
          <h4>{{ 'products.compare.no_records' | t }}</h4>
          <p><a href="{{ routes.all_products_collection_url  }}" class='dt-sc-btn'>{{ 'products.compare.continue' | t }}</a></p>
        </div>
        <div v-else>
          <table>
            <tr>
              <template v-for="(item, i) in compareListRecords">	
                <td :class="'product-thumbnail record-'+item.product_handle">
                  <div class="compare_img">
                    <a :href="item.product_url">
                      <img :src="item.product_image" alt="">
                    </a>
                    <p :class="'record-'+item.product_handle">
                      <a href="javascript:void(0);" class=" dt-sc-btn close-icon" :data-product_handle="item.product_handle" v-on:click="remove(item.product_handle)"></a>
                    </p>
                  </div>
                  <h5  class="compare_title"><a :href="item.product_url">${ item.product_title }</a></h5>
                  <div class="amount" v-html="item.money_price">${ item.money_price }</div>

                  <div class="addtocart_btn">
                    {% comment %}<a href="#" class="dt-sc-btn dT_QuickAddToCartBtn" :data-product-varient-id="item.variant_id">{{ 'products.product.add_to_cart' | t }}</a>{% endcomment %}
                    <a :href="item.product_url" class="dt-sc-btn" :data-product-varient-id="item.variant_id">{{ 'products.product.select_options' | t }}</a>
                  </div>

                </td>
              </template>		
            </tr>
          </table>
        </div>  
      </form>
    </div>
  </div>
</div>

<style>

  .dT_CompareListGrid table th { font-weight:600; }
  .dT_CompareListGrid table td, .dT_CompareListGrid table th { display: flex; flex-direction: column; border-radius: var(--DTRadius); border:1px solid var(--DTColor_Border);}
  .dT_CompareListGrid table td > *{  padding-bottom: 10px;}
  .dT_CompareListGrid table td .addtocart_btn{ margin-top: auto; }
  .dT_CompareListGrid table .dt-sc-btn{ margin: 0; display:inline-block;}
  .product-thumbnail{ position:relative; }
  .product-thumbnail .close-icon { position:absolute; right:20px; top:20px; line-height:0;}
  .dT_CompareListGrid table .compare_img img { width:100%; border-radius: var(--DTRadius);}
  .dT_CompareListGrid table td .amount { font-weight: 600; margin: 0}
  .dT_CompareListGrid table td .compare_title { margin:0;}
  .dT_CompareListGrid table tr{ display: grid; grid-template-columns: repeat(auto-fill,minmax(270px,1fr));    gap: var(--DTGutter_Width);}

</style>
