{% doc %}
  @prompt
    I need a home section that I can set a background image that can be aligned left-center-right, change the background color of the whole section, the section should also allows me to include a heading, sub heading and description text which should be contained and also allows me to align left-center-right. Inside the text container I need another container where I can arrange up to 4 categories, I want to be able to link the categories to the actual categories in my shop, I want to be able to set the max amount of categories per row, enable and disable a dropshadow effect for the categories card

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-section-{{ ai_gen_id }} {
    position: relative;
    background-color: {{ block.settings.background_color }};
    {% if block.settings.background_image %}
      background-image: url('{{ block.settings.background_image | image_url: width: 2000 }}');
      background-size: cover;
      background-repeat: no-repeat;
      background-position: {{ block.settings.background_alignment }};
    {% endif %}
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    min-height: 400px;
    display: flex;
    align-items: center;
  }

  .ai-hero-container-{{ ai_gen_id }} {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-hero-content-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    max-width: 800px;
    {% if block.settings.text_alignment == 'left' %}
      margin-right: auto;
    {% elsif block.settings.text_alignment == 'right' %}
      margin-left: auto;
    {% else %}
      margin: 0 auto;
    {% endif %}
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-hero-subheading-{{ ai_gen_id }} {
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 16px;
    line-height: 1.3;
  }

  .ai-hero-description-{{ ai_gen_id }} {
    color: {{ block.settings.description_color }};
    font-size: {{ block.settings.description_size }}px;
    margin: 0 0 32px;
    line-height: 1.5;
  }

  .ai-hero-categories-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.categories_per_row }}, 1fr);
    gap: {{ block.settings.category_gap }}px;
    margin-top: 32px;
  }

  .ai-hero-category-{{ ai_gen_id }} {
    text-align: center;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    {% if block.settings.enable_category_shadow %}
      box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px {{ block.settings.shadow_spread }}px {{ block.settings.shadow_color }};
    {% endif %}
    border-radius: {{ block.settings.category_border_radius }}px;
    overflow: hidden;
    background-color: {{ block.settings.category_background_color }};
    padding: {{ block.settings.category_padding }}px;
  }

  .ai-hero-category-{{ ai_gen_id }}:hover {
    transform: translateY(-5px);
    {% if block.settings.enable_category_shadow %}
      box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical | plus: 5 }}px {{ block.settings.shadow_blur | plus: 5 }}px {{ block.settings.shadow_spread }}px {{ block.settings.shadow_color }};
    {% endif %}
  }

  .ai-hero-category-image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.category_image_height }}px;
    border-radius: {{ block.settings.category_image_border_radius }}px;
    overflow: hidden;
    margin-bottom: {{ block.settings.category_spacing }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-category-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-category-image-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-hero-category-title-{{ ai_gen_id }} {
    color: {{ block.settings.category_title_color }};
    font-size: {{ block.settings.category_title_size }}px;
    margin: 0;
    font-weight: 600;
  }

  .ai-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    color: #666;
    font-size: 14px;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 768px) {
    .ai-hero-section-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.7 }}px 0 {{ block.settings.section_padding_bottom | times: 0.7 }}px;
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-hero-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }

    .ai-hero-categories-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.categories_per_row_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 480px) {
    .ai-hero-categories-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.categories_per_row_mobile }}, 1fr);
    }
  }
{% endstyle %}

<section
  class="ai-hero-section-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-hero-container-{{ ai_gen_id }}">
    <div class="ai-hero-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h1 class="ai-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
      {% endif %}

      {% if block.settings.subheading != blank %}
        <h2 class="ai-hero-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</h2>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-hero-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
      {% endif %}

      <div class="ai-hero-categories-{{ ai_gen_id }}">
        {% for i in (1..4) %}
          {% liquid
            assign category_enabled_key = 'category_' | append: i | append: '_enabled'
            assign category_collection_key = 'category_' | append: i | append: '_collection'
            assign category_custom_image_key = 'category_' | append: i | append: '_custom_image'
            assign category_use_custom_image_key = 'category_' | append: i | append: '_use_custom_image'

            assign category_enabled = block.settings[category_enabled_key]
            assign category_collection = block.settings[category_collection_key]
            assign category_custom_image = block.settings[category_custom_image_key]
            assign category_use_custom_image = block.settings[category_use_custom_image_key]
          %}

          {% if category_enabled and category_collection != blank %}
            <a
              href="{{ category_collection.url }}"
              class="ai-hero-category-{{ ai_gen_id }}"
            >
              <div class="ai-hero-category-image-{{ ai_gen_id }}">
                {% if category_use_custom_image and category_custom_image %}
                  <img
                    src="{{ category_custom_image | image_url: width: 400 }}"
                    alt="{{ category_custom_image.alt | escape }}"
                    loading="lazy"
                    width="400"
                    height="{{ block.settings.category_image_height }}"
                  >
                {% elsif category_collection.featured_image %}
                  <img
                    src="{{ category_collection.featured_image | image_url: width: 400 }}"
                    alt="{{ category_collection.featured_image.alt | escape }}"
                    loading="lazy"
                    width="400"
                    height="{{ block.settings.category_image_height }}"
                  >
                {% else %}
                  {{ 'collection-1' | placeholder_svg_tag }}
                {% endif %}
              </div>
              <h3 class="ai-hero-category-title-{{ ai_gen_id }}">{{ category_collection.title }}</h3>
            </a>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    {% unless block.settings.background_image %}
      <div class="ai-hero-empty-state-{{ ai_gen_id }}">
        Add a background image to complete the look
      </div>
    {% endunless %}
  </div>
</section>

