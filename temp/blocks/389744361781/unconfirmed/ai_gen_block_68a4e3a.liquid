<div class="ai-products-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-products-section__container-{{ ai_gen_id }}">
    {% if block.settings.subheading != blank or block.settings.heading != blank or block.settings.description != blank %}
      <div class="ai-products-section__header-{{ ai_gen_id }}">
        {% if block.settings.subheading != blank %}
          <div class="ai-products-section__subheading-{{ ai_gen_id }}">
            {{ block.settings.subheading }}
          </div>
        {% endif %}

        {% if block.settings.heading != blank %}
          <h2 class="ai-products-section__heading-{{ ai_gen_id }}">
            {{ block.settings.heading }}
          </h2>
        {% endif %}

        {% if block.settings.description != blank %}
          <div class="ai-products-section__description-{{ ai_gen_id }}">
            {{ block.settings.description }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collection != blank %}
      {% assign products_to_show = block.settings.products_to_show %}
      {% assign collection_products = block.settings.collection.products | limit: products_to_show %}
      {% if collection_products.size > 0 %}
        <div class="ai-products-section__grid-{{ ai_gen_id }}">
          {% for product in collection_products %}
            <div class="ai-products-section__product-{{ ai_gen_id }}">
              <div class="ai-products-section__product-image-{{ ai_gen_id }}">
                <a href="{{ product.url }}">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 400}}"
                      alt="{{ product.featured_image.alt | escape }}"
                      loading="lazy"
                      width="400"
                      height="400"
                    >
                  {% else %}
                    <div class="ai-products-section__product-placeholder-{{ ai_gen_id }}">
                      {{'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </a>
              </div>

              <div class="ai-products-section__product-content-{{ ai_gen_id }}">
                <h3 class="ai-products-section__product-title-{{ ai_gen_id }}">
                  <a href="{{ product.url }}">{{ product.title }}</a>
                </h3>

                <div class="ai-products-section__product-price-{{ ai_gen_id }}">
                  {{ product.price | money }}
                  {% if product.compare_at_price > product.price %}
                    <span class="ai-products-section__product-price-compare-{{ ai_gen_id }}">
                      {{ product.compare_at_price | money }}
                    </span>
                  {% endif %}
                </div>

                {% if product.available %}
                  <button
                    type="button"
                    class="ai-products-section__add-to-cart-{{ ai_gen_id }}"
                    data-product-id="{{ product.id }}"
                    data-variant-id="{{ product.selected_or_first_available_variant.id }}"
                  >
                    {{ block.settings.add_to_cart_text }}
                  </button>
                {% else %}
                  <button
                    type="button"
                    class="ai-products-section__add-to-cart-{{ ai_gen_id }}"
                    disabled
                  >
                    {{ block.settings.sold_out_text }}
                  </button>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>

        {% if block.settings.show_button and block.settings.button_text != blank %}
          <div class="ai-products-section__button-container-{{ ai_gen_id }}">
            <a
              href="{{ block.settings.button_link | default: '/collections' }}"
              class="ai-products-section__button-{{ ai_gen_id }}"
            >
              {{ block.settings.button_text }}
            </a>
          </div>
        {% endif %}
      {% else %}
        <div class="ai-products-section__empty-state-{{ ai_gen_id }}">
          <h3>No products found</h3>
          <p>The selected collection doesn't contain any products yet.</p>
        </div>
      {% endif %}
    {% else %}
      <div class="ai-products-section__empty-state-{{ ai_gen_id }}">
        <h3>Choose a collection</h3>
        <p>Select a collection to display products from your store.</p>
      </div>
    {% endif %}
  </div>
</div>

<script>
(function() {
  class ProductsSection{{ ai_gen_id }} extends HTMLElement {
    constructor() {
      super();
    }

    connectedCallback() {
      this.setupAddToCartButtons();
    }

    setupAddToCartButtons() {
      const buttons = this.querySelectorAll('.ai-products-section__add-to-cart-{{ ai_gen_id }}:not([disabled])');
      
      buttons.forEach(button => {
        button.addEventListener('click', (e) => {
          e.preventDefault();
          this.addToCart(button);
        });
      });
    }

    async addToCart(button) {
      const variantId = button.dataset.variantId;
      const originalText = button.textContent;
      
      button.textContent = 'Adding...';
      button.disabled = true;

      try {
        const response = await fetch('/cart/add.js', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify({
            id: variantId,
            quantity: 1
          })
        });

        if (response.ok) {
          button.textContent = 'Added!';
          document.dispatchEvent(new CustomEvent('cart:updated'));
          
          setTimeout(() => {
            button.textContent = originalText;
            button.disabled = false;
          }, 2000);
        } else {
          throw new Error('Failed to add to cart');
        }
      } catch (error) {
        console.error('Error adding to cart:', error);
        button.textContent = 'Error';
        
        setTimeout(() => {
          button.textContent = originalText;
          button.disabled = false;
        }, 2000);
      }
    }
  }

  customElements.define('products-section-{{ ai_gen_id }}', ProductsSection{{ ai_gen_id }});
})();
</script>

