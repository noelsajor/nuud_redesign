{% doc %}
  @prompt
    I want to create home section where I can set a background image and in front of it a container where I can include sub heading, heading and body text, on the other side I want to be able to include a png image with a subtle animation. The general idea is to set a pool as the background image and a girl floating on top of this background image that's why I need to be able to animate the image, make the animation to run smoothly, make the animation just bounce up and down with easy ease in and out

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-section-{{ ai_gen_id }} {
    position: relative;
    min-height: {{ block.settings.section_height }}px;
    background-color: {{ block.settings.background_color }};
    overflow: hidden;
    display: flex;
    align-items: center;
  }

  .ai-hero-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-hero-background-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-background-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-background-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
    opacity: 0.3;
  }

  .ai-hero-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .ai-hero-container-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;width: 100%;
    max-width: 1200px;
    margin: 0 auto;padding: 0 20px;display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .ai-hero-content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
  }

  .ai-hero-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0 0 10px 0;
    opacity: 0.8;
  }

  .ai-hero-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 20px 0;
    line-height: 1.2;
    font-weight: 600;
  }

  .ai-hero-body-{{ ai_gen_id }} {
    font-size: {{ block.settings.body_size }}px;
    line-height: 1.6;
    margin: 0;
  }

  .ai-hero-image-container-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .ai-hero-floating-image-{{ ai_gen_id }} {
    max-width: 100%;
    height: auto;
    will-change: transform;
    animation: ai-hero-bounce-{{ ai_gen_id }} {{ block.settings.animation_duration }}s ease-in-out infinite;
  }

  .ai-hero-image-placeholder-{{ ai_gen_id }} {
    width: 300px;
    height: 300px;
    background-color: rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 2px dashed rgba(255, 255, 255, 0.3);
  }

  .ai-hero-image-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.5;
    color: {{ block.settings.text_color }};
  }

  .ai-hero-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    text-align: center;
    pointer-events: none;
  }

  @keyframes ai-hero-bounce-{{ ai_gen_id }} {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-{{ block.settings.bounce_distance }}px);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .ai-hero-floating-image-{{ ai_gen_id }} {
      animation: none;
    }
  }

  @media screen and (max-width: 768px) {
    .ai-hero-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
    }

    .ai-hero-section-{{ ai_gen_id }} {
      min-height: {{ block.settings.section_height | times: 0.7 }}px;
    }

    .ai-hero-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-hero-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }

    .ai-hero-body-{{ ai_gen_id }} {
      font-size: {{ block.settings.body_size | times: 0.9 }}px;
    }
  }

  {% if block.settings.layout == 'image_left' %}
    .ai-hero-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr 1fr;
    }
    
    .ai-hero-content-{{ ai_gen_id }} {
      order: 2;
    }
    
    .ai-hero-image-container-{{ ai_gen_id }} {
      order: 1;
    }
  {% endif %}
{% endstyle %}<div class="ai-hero-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-hero-background-{{ ai_gen_id }}">
    {% if block.settings.background_image %}
      <img
        src="{{ block.settings.background_image | image_url: width: 2000 }}"
        alt="{{ block.settings.background_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.background_image.width }}"
        height="{{ block.settings.background_image.height }}"
      >
    {% else %}
      <div class="ai-hero-background-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  {% if block.settings.show_overlay %}
    <div class="ai-hero-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-hero-container-{{ ai_gen_id }}">
    <div class="ai-hero-content-{{ ai_gen_id }}">
      {% if block.settings.subheading != blank %}
        <div class="ai-hero-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
      {% endif %}

      {% if block.settings.heading != blank %}
        <h1 class="ai-hero-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
      {% endif %}

      {% if block.settings.body_text != blank %}
        <div class="ai-hero-body-{{ ai_gen_id }}">{{ block.settings.body_text }}</div>
      {% endif %}
    </div>

    <div class="ai-hero-image-container-{{ ai_gen_id }}">
      {% if block.settings.floating_image %}
        <img
          src="{{ block.settings.floating_image | image_url: width: 600 }}"
          alt="{{ block.settings.floating_image.alt | escape }}"
          class="ai-hero-floating-image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.floating_image.width }}"
          height="{{ block.settings.floating_image.height }}"
        >
      {% else %}
        <div class="ai-hero-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}<div class="ai-hero-empty-state-{{ ai_gen_id }}">
            Add a floating image
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>

