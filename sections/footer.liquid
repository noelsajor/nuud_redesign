{% assign full = section.settings.full %}
{% assign padding = section.settings.padding | split: ',' %}
{% assign padding_top = padding[0] %}
{% assign padding_bottom = padding[1] %} 
{% assign margin = section.settings.top_space %}

{% if section.settings.social_style == 'inline' %}
{% assign social_icon_style = 'dt-sc-list-inline' %}

{% elsif section.settings.social_style == 'with_brand_name' %}
{% assign social_icon_style = 'dt-sc-icon-brand' %}
{% endif %}

<footer class="site-footer" data-section-id="{{ section.id }}" data-section-type="footer-section" style="margin-top:{{margin}}px;{% if section.settings.footer_bg_img %} background-image:url('{{ section.settings.image_1 | img_url: 'master' }}');background-size:auto;background-repeat:no-repeat;{% endif %}">
  <div class="rightimage" style="{% if section.settings.image_4 != blank %} background-image:url('{{ section.settings.image_4 | img_url: 'master' }}');background-repeat:no-repeat; position:absolute;width:100px;height:100px;background-size: 100%;{% endif %}"></div>
  {% if section.settings.newsletter_placement == 'footer_newsletter_top' %} 
  <div class="{% render 'container-settings' %}"> 
    <div class="row">
      <div class="full-width-newsletter" style="padding-top:40px;">
        {% for block in section.blocks %}
        {% assign footer_column_alignment = block.settings.column_alignment %}
        {% if block.type == 'newsletter' %}
        {% include 'footer-newsletter', block: block, footer_column_alignment: footer_column_alignment, social_styleClass: social_icon_style %}
        {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
  {% endif %}

  <div class="site-footer__top" style="padding-top:{{padding_top}}px; padding-bottom:{{padding_bottom}}px;">
    <div class="{% render 'container-settings' %}"> 
      <div class="row">
        <div class="dt-sc-flex-space-between">


          {% assign row_width = 0 %}
          {% for block in section.blocks %}


          {% if block.settings.footer_menu_style == 'vertical' %}
          {% assign footer_menu_style = 'footer_menu dt-sc-list' %}
          {% else %}
          {% assign footer_menu_style = 'footer_menu dt-sc-list-inline' %}
          {% endif %}


          {% assign footer_column_alignment = block.settings.column_alignment %}
          {% assign row_width = row_width | plus: block.settings.container_width %}


          {% if row_width > 100 %}
          <div class="footer__clear"></div>
          {% assign row_width = row_width | minus: 100 %}
          {% endif %}

          {% case block.type %}
          {% when 'logo' %}
          <div {{ block.shopify_attributes }} class=" footer__item--{{ block.id }} footer-logo">
            {% include 'footer-logo', block: block, footer_column_alignment: footer_column_alignment, social_styleClass: social_icon_style,  first_instance: true %}
          </div>

          {% when 'social' %}
          {% if section.settings.social_placement == 'default' %}
          <div {{ block.shopify_attributes }} class=" footer__item--{{ block.id }} footer-social">
            {% include 'social-links', block: block, footer_column_alignment: footer_column_alignment, social_styleClass: social_icon_style %}
          </div>
          {% endif %}
          {% when 'custom' %}
          <div {{ block.shopify_attributes }} class=" footer__item--{{ block.id }} footer-custom-text">
            {% include 'footer-custom-text', block: block, footer_column_alignment: footer_column_alignment, social_styleClass: social_icon_style %}
          </div>
          {% when 'newsletter' %}
          {% if section.settings.newsletter_placement == 'default' %}
          <div {{ block.shopify_attributes }} class=" footer__item--{{ block.id }} footer-newsletter">
            {% include 'footer-newsletter', block: block, footer_column_alignment: footer_column_alignment, social_styleClass: social_icon_style %}
          </div>
          {% endif %}
          {% when 'menu' %}
          <div {{ block.shopify_attributes }} class=" footer__item--{{ block.id }} footer-links">
            {% include 'footer-menu', block: block, footer_column_alignment: footer_column_alignment, footer_menu_style: footer_menu_style %}
          </div>
          {% when 'address' %}
          <div {{ block.shopify_attributes }} class=" footer__item--{{ block.id }} footer-contact-info">
            {% include 'footer-address', block: block, footer_column_alignment: footer_column_alignment, social_styleClass: social_icon_style %}
          </div>
          {% when 'html' %}
          <div {{ block.shopify_attributes }} class=" footer__item--{{ block.id }} footer-html">
            {% include 'footer-html', block: block, footer_column_alignment: footer_column_alignment %}
          </div>
          {% when 'blog' %}
          <div {{ block.shopify_attributes }} class=" footer__item--{{ block.id }} footer-blog">
            {% include 'footer-blog', block: block, footer_column_alignment: footer_column_alignment %}
          </div>
          {% when 'instafeed' %}
          <div {{ block.shopify_attributes }} class=" footer__item--{{ block.id }} footer-instagram">            
            <div class="{{ footer_column_alignment}}">
              {% if block.settings.title != blank  and section.settings.show_footer_title %}        
              <h2 class="footer__title ">{{ block.settings.title }}</h2>
              {% endif %}
              <div id="instafeed" class="footer-instafeed" data-accessToken="{{block.settings.access_token}}" data-count="{{- block.settings.post_limit -}}"></div>
              {{ 'dT-insta.js' | asset_url | script_tag }}
            </div>
          </div>
          {% when 'split' %}
        </div>
      </div>
    </div>
  </div>
  <div class="site-footer__top site-footer__segmented" style="padding-top:{{padding_top}}px; padding-bottom:{{padding_bottom}}px;background-color: {{section.settings.segmented_bg_clr }};">
    <div class="{% render 'container-settings' %}"> 
      <div class="row">
        <div class="dt-sc-flex-space-between">
          {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>

  {% if section.settings.newsletter_placement == 'footer_bottom' %} 
  <div class="{% render 'container-settings' %}"> 
    <div class="row">
      <div class="full-width-newsletter text-center" style="padding-bottom:40px;">
        {% for block in section.blocks %}
        {% assign footer_column_alignment = block.settings.column_alignment %}
        {% if block.type == 'newsletter' %}
        {% include 'footer-newsletter', block: block, footer_column_alignment: footer_column_alignment, social_styleClass: social_icon_style %}
        {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
  {% endif %}

  {% if section.settings.show_copyright or  section.settings.enable_inline_footer_menu or section.settings.show_payment_icons %}
  <div class="site-footer__bottom">
    <div class="{% render 'container-settings' %}"> 
      <div class="row">
        <div class="dt-sc-flex-space-between">
          {% if section.settings.show_copyright %}
          <div class="footer__copyright">
            <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}
              {% if section.settings.copyright_text != blank %}
              {% if section.settings.copyright_link != blank %} <a  href="{{ section.settings.copyright_link }}" target="_blank"> {% endif %}
              {{ section.settings.copyright_text }} 
              {% if section.settings.copyright_link != blank %}</a>{% endif %}
              {% endif %}
            </p>
          </div>
          {% endif %}


          {% if section.settings.enable_inline_footer_menu %}
          {% if linklists[section.settings.footer].links.size > 0 %}
          <ul class="footer_menu dt-sc-list-inline">
            {% for link in linklists[section.settings.footer].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
            {% endfor %}
          </ul>
          {% endif %}
          {% endif %}

          {% if section.settings.social_placement == 'footer_bottom' and section.settings.show_social %}
          {% include 'social-links', social_styleClass: 'dt-sc-list-inline footer-social-icons' %}
          {% endif %}

          {% if section.settings.show_payment_icons  and  section.settings.payment_placement == 'default' %}
          {% unless shop.enabled_payment_types == empty %}
          <div class="footer__payment-icons">
            <ul class="dt-sc-list-inline payment-icons">
              {% for type in shop.enabled_payment_types %}
              <li class="icon--payment">
                {{ type | payment_type_svg_tag }}
              </li>
              {% endfor %}
            </ul>
          </div>
          {% endunless %}
          {% endif %}

        </div>
      </div>
    </div>
  </div>

  {% endif %}
  <div class="leftimage" style="{% if section.settings.image_2 != blank %} background-image:url('{{ section.settings.image_2 | img_url: 'master' }}');background-repeat:no-repeat; position:absolute;width:50px;height:50px;{% endif %}"></div>
  <div class="leftimage_2" style="{% if section.settings.image_3 != blank %} background-image:url('{{ section.settings.image_3 | img_url: 'master' }}');background-repeat:no-repeat; position:absolute;width:100px;height:110px;z-index:-1;{% endif %}"></div>
</footer>

<style>

  .site-footer .container-fluid.spacing_enabled>.row{padding:0 80px;}
  .site-footer .footer__title  { margin:0; color:{{ section.settings.footer_heading_clr }}; font-size:40px; }
  .site-footer:before{z-index: -1; content:''; position: absolute; left: 0; right: 0; top: 0; bottom: 0;  background-color:{{ section.settings.footer_bg_clr }}; opacity:{{ section.settings.color_opacity }}; }
  .site-footer, .site-footer p { color:{{ section.settings.footer_txt_clr }}; }
  .site-footer li a, .footer-logo a { color:{{ section.settings.footer_link_clr }} !important; }
  .site-footer li a:hover , .footer-logo a:hover { color:{{ section.settings.footer_link_hover_clr }} !important; }
  .site-footer .site-footer__top{position:relative;}
  .site-footer .site-footer__top:before{
    content: " ";
    position: absolute;
    width:100%;
    /* height:200px; */
    {% if section.settings.before_image !=blank %}
    background-image:url({{ section.settings.before_image | img_url:'master' }});
   {% endif %}}
    background-size: cover;
    background-repeat: repeat;
    background-position:center;
    top:-152px;
    left:0;
    right:0;

  }
  .site-footer .site-footer__top:after{
    content: " ";
    position: absolute;
    width:509px;
    height:450px;
      {% if section.settings.after_image != blank %}
    background-image:url({{ section.settings.after_image | img_url:'master' }});
    {% endif %}
    background-size: auto;
    background-repeat: no-repeat;
    background-position:center bottom;
    bottom:0;
    right:500px;
    z-index: -1;
    animation: dt-swing2 ease-in-out 3s infinite alternate;

  }
  #shopify-section-{{section.id}} .site-footer .leftimage { 
    top: auto;
    bottom: 50px;
    left: 50px;
    animation:flip ease-in-out 5s infinite alternate;
  }
  #shopify-section-{{section.id}} .site-footer .leftimage_2 { 
    top: 0;
    bottom: 0;
    left: 30%;
    margin: auto;
    animation:bounce 5s infinite linear;
    transform: translateX(50%);
  }
  #shopify-section-{{section.id}} .site-footer .rightimage { 
    top: 120px;
    right:50px;
    animation:bounce 5s infinite linear;
  }

  /**************/
  .site-footer{ position:relative; }
  .site-footer > *{ z-index: 1; position: relative;}
  .site-footer .footer__title:empty{ display:none;}
  footer { clear:both; }
  footer ul, footer p { padding: 0; margin: 0; clear:both; }
  footer svg{ height: 20px; width: 30px; }
  footer div[class*="text-"] > *:not(.dt-sc-list-inline){ margin-bottom:25px; display: block; }
  footer div[class*="text-"] > *:last-child{ margin-bottom:0; }

  footer .footer-logo .dt-sc-btn,
  footer .footer-logo a{ display: inline-block !important;     border: none;
    padding: 0;}
  footer .footer-logo .text-start{}
  footer .footer-logo .dt-sc-btn, footer .footer-logo a{order: 4;margin:0;}

  footer .footer-social-icons svg{width: 20px; height: 20px; padding: 2px; border-radius:0; }
  footer .footer-social-icons.dt-sc-icon-brand svg{ border: none; width: 25px; height: 16px; padding: unset; border-radius: unset; }
  footer .text-start li{margin-bottom:20px; }

  footer .text-start .contact-info li{ position: relative; padding-left:40px;    align-items: center;
    display: flex;
    flex-wrap: wrap; }
  footer .text-start .contact-info li:last-child{ margin:0;}
  footer .text-start .contact-info i{ padding-right:0; position: absolute; line-height: 1.5em;left:0;}
  footer .text-start .contact-info i.fa-mobile{font-size:30px;line-height:normal;}
  footer .text-end .contact-info li{position: relative;padding-right: 30px;}
  footer .text-end .contact-info i{padding-left:40px;position: absolute;line-height: 1.5em;right: 5px;}
  footer .text-center .contact-info i{position: relative;right: 10px;}
  footer .footer__social{display: inline-flex;}
  footer .site-footer__bottom p, footer .site-footer__bottom a {color:{{ section.settings.footer_color}};}
  footer .site-footer__bottom a:hover{color:{{ section.settings.footer_link_hover}};}

  footer .site-footer__bottom{display:none;flex-wrap: wrap;background-color:{{ section.settings.footer__bottom_bg}}; line-height: 2em}
  footer .site-footer__bottom:before{content:"";width:100%;height:1px;top:0;background-color:{{ section.settings.color_borders }};}
  footer div[class*="dt-sc-flex"]{align-items: self-start;}
  footer .site-footer__bottom div[class*="dt-sc-flex"] div:only-child{margin: auto;text-align: center;}
  footer .site-footer__bottom div[class*="dt-sc-flex"]{ padding:15px 0;}
  footer .site-footer__bottom .payment-icons > * + *{ margin-left:2px}

  footer #newsletter-footer{ display: inline-block; width: 100%; }
  footer .footer__newsletter { margin: 10px 0 15px; float: left; width: 100%;} 
  footer div[class*="footer__item--footer"] .footer__newsletter > *{margin-bottom:15px; width:100%;}

  footer .text-end .footer__newsletter > *{ margin-left: auto;}
  footer .text-center .footer__newsletter > *{ margin-left: auto; margin-right: auto; }
  footer .footer__newsletter input, footer .footer__newsletter input:focus{ border:none; padding: var(--DTPadding_Btn); background-color:var(--DTInputBackground); }

  footer .text-start .dt-sc-social-icons li{ margin-right:45px;}
  footer .text-end .dt-sc-social-icons li{ margin-left: 15px; line-height: initial;}
  footer .text-center .dt-sc-social-icons li{ margin:0 5px;}

  footer .copyright { border-top: 1px solid var(--DTColor_Border); }

  footer .footer__copyright a{color:{{ section.settings.copyright_link_color}}; }
  footer .footer__copyright a:hover{ color:{{ section.settings.copyright_link_color_hover}};}

  .icon__fallback-text { font-size: 0;}
  .dt-sc-icon-brand .icon__fallback-text {font-size:var(--DTFontSizeBase); padding-left: 5px;}
  label.for-option-color { text-indent: -99999px; width: 30px; height: 30px; border-radius: 50%; }

  .full-width-newsletter div[class*="dt-sc-flex"]>div { width: 100%; max-width: 600px; margin: auto; }
  .full-width-newsletter div[class*="dt-sc-flex"] h4{ text-align: center; margin-top: 0; }
  .full-width-newsletter .footer__newsletter{ display: flex; align-items: center;}
  .full-width-newsletter .footer__newsletter input{ width:calc(100% - 200px); border-start-end-radius: 0; border-end-end-radius: 0; }
  .full-width-newsletter .footer__newsletter button{ margin:0; width:200px; border-end-start-radius: 0; border-start-start-radius: 0; border-left: 1px solid; }

  .site-footer .footer_menu.dt-sc-list li a:before{ content: "\f105"; font-family: 'FontAwesome'; position:relative; padding-right: 10px; }
  .site-footer .footer_menu.dt-sc-list-inline li a:before{ content: "|"; position:relative; padding:0 10px;  color:{{ section.settings.footer_link_clr }}; }
  .site-footer .dt-sc-list-inline li:first-child a:before{ display:none;padding-right: 0;}

  .site-footer .site-footer__bottom .footer_menu.dt-sc-list-inline li a:before{ color:{{ section.settings.footer_color}};}
  footer address:only-of-type{ margin:0; }


  {% for block in section.blocks %}

  .footer__item--{{ block.id }}.footer-instagram  div[class*="text-"]  .footer-instafeed{ display: grid; grid-gap: {{block.settings.thumb-gap}}px; grid-template-columns: repeat( auto-fit, minmax(calc({{block.settings.thumb-size}}% - {{block.settings.thumb-gap}}px), 1fr) ); }

  .footer__item--{{ block.id }}.footer-blog li { display: grid; grid-template-columns: 100px auto; gap: var(--DTGutter_Width); margin-bottom: var(--DTGutter_Width); }
  .footer__item--{{ block.id }}.footer-blog li .article-title{ font-size:var(--DTFontSizeBase);  margin: 0 0 5px; }
  .footer__item--{{ block.id }}.footer-blog li .article-title a{ font-size:var(--DTFontSizeBase); }
  .footer__item--{{ block.id }}.footer-blog li:not(:hover) .article-image { filter: grayscale(100); }
  .footer__item--{{ block.id }}.footer-blog li .footer_blog_content >*:not(.article-title) { opacity:.7; font-size: calc(var(--DTFontSizeBase) - 2px); line-height: 1.5em; margin-top: 10px;}
  .footer__item--{{ block.id }}.footer-blog .text-end li{ grid-template-columns: auto 100px;  margin-bottom: var(--DTGutter_Width); }
  .footer__item--{{ block.id }}.footer-blog .text-end .footer_blog_content{ order:-1; }
  .footer__item--{{ block.id }}.footer-blog .text-center  li{ grid-template-columns:1fr;}

  {% endfor %} 

  /***********************************
  Responsive
  ***********************************/

  {% for block in section.blocks %}



  @media only screen and (min-width: 576px) {
    .footer__item--{{ block.id }} { width:calc(50% - calc(var(--DTGutter_Width) / 2 )); margin-bottom:0;}
  }

  @media only screen and (min-width: 1200px) {
    .footer__item--{{ block.id }} { width:calc({{ block.settings.container_width }}% - calc(var(--DTGutter_Width) / 2 )); margin-bottom:0;}
  }

  @media(min-width:1280px) and (max-width:1700px) {

    .footer__item--{{ block.id }}.footer-html{ width:25% !important;}
  }

  @media(min-width:1280px) and (max-width:1540px) {

    .site-footer .container-fluid.spacing_enabled > .row{padding:0;}

  }
  @media(max-width:1280px) {

    .site-footer .container-fluid.spacing_enabled > .row{padding:0;}
    .footer__item--{{ block.id }}.footer-html{ width:30% !important;}

  }

  @media(max-width:1199px) {

    .site-footer .container-fluid.spacing_enabled > .row{padding:0;}
    .footer__item--{{ block.id }} { width:40% !important;}
    .footer__item--{{ block.id }}.footer-html{ width:100% !important;}
    .site-footer .site-footer__top::after {right:0;}

  }

  {% if  block.type == 'newsletter' %}
  .full-width-newsletter .footer__newsletter button{ border-color:{{ block.settings.newsletter_btn_bg }}; }
  .footer__newsletter-btn{ background-color: {{ block.settings.newsletter_btn_bg }}; color: {{ block.settings.newsletter_btn_color }}; }
  .footer__newsletter-btn:hover{ background-color: {{ block.settings.newsletter_btn_hover_bg }}; color: {{ block.settings.newsletter_btn_hover_color }}; }
  {% endif %}

  {% if  block.type == 'logo' %}
  .footer-logo .dt-sc-btn{ background-color: {{ block.settings.footer_btn_bg }}; color: {{ block.settings.footer_btn_color }}; }
  .footer-logo .dt-sc-btn:hover{ background-color: {{ block.settings.footer_btn_hover_bg }}; color: {{ block.settings.footer_btn_hover_color }}; }
  {% endif %}

  @media (max-width:968px) {

    .footer__item--{{ block.id }} { width:48% !important;}

  }


  @media only screen and (max-width: 1199px) {
    footer div[class*="text-"] > *:not(.dt-sc-list-inline){ margin-bottom:20px;}
    .footer__item--{{ block.id }} { width:100%;  margin-bottom:40px;}
    .footer__item--{{ block.id }} { width:100% !important;}
    /* footer .footer-logo .text-start {    flex-direction: column;    align-items: center;}
    footer div[class*="text-"] > *:not(.dt-sc-list-inline) {display: flex;
    justify-content: center;    align-items: center;text-align:center;        flex-direction: column;} */
    
  }

  {% endfor %} 



  @media (max-width:1199px) {

    footer .footer-logo .dt-sc-btn{display:none !important;}
    footer .site-footer__bottom{display:block;}

  }

  @media (max-width: 767px) {

    /*footer.site-footer { margin-top: 40px !important;}*/
    .footer__item--{{ block.id }} { width:100% !important;}
    footer .text-start .dt-sc-social-icons li{margin-right: 20px;}
    .site-footer li a {
      font-size: 16px;
    }

  }

  @media (max-width:576px) {
    footer .site-footer__bottom div[class*="dt-sc-flex"]{ justify-content: center; }
    footer .site-footer__bottom div[class*="dt-sc-flex"] > *{ margin:0 15px;}
    .footer__item--{{ block.id }} { width:100% !important;}
    footer .footer__newsletter{ margin-top: 0; }
    .site-footer .site-footer__top::after{z-index:-1;}
  }

  .template-index footer.site-footer{margin-top:0 !important;overflow:hidden;}


</style>



