{% assign margin = section.settings.margin | split: ',' %}
{% assign margin_top = margin[0] %}
{% assign margin_bottom = margin[1] %} 
{% assign padding = section.settings.padding | split: ',' %}
{% assign padding_top = padding[0] %}
{% assign padding_bottom = padding[1] %} 

{%- comment -%} Determine grid classes {%- endcomment -%}
{% case section.settings.grid %}
  {% when '1' %}{% assign column = '' %}
  {% when '2' %}{%- assign column = 'two-column' -%}
  {% when '3' %}{%- assign column = 'three-column' -%}              
  {% when '4' %}{%- assign column = 'four-column' -%}              
  {% when '5' %}{%- assign column = 'five-column' -%}   
  {% when '6' %}{%- assign column = 'six-column' -%}   
  {% else %}{%- assign column = 'three-column' -%}              
{% endcase %} 

{%- comment -%} Item style (grid/list/overlay) {%- endcomment -%}
{% if section.settings.block_banner_style == 'grid-style' %}
  {% assign item_style = 'grid-style' %}
{% elsif section.settings.block_banner_style == 'list-style' %}
  {% assign verticalStyle = section.settings.vertical_position %}
  {% assign item_style = 'list-style' %}
{% elsif section.settings.block_banner_style == 'overlay-style' %}
  {% assign verticalStyle = section.settings.vertical_position %}
  {% assign item_style = 'overlay-style' %}
{% endif %}

{%- comment -%} Optional overlay on section background {%- endcomment -%}
{% if section.settings.enable_overlay %}
  {% assign section_overlay = 'dt-sc-overlay' %}
{% endif %}

{%- comment -%} Content width splits {%- endcomment -%}
{% assign listWidth = section.settings.content_width | split: '/' %}
{%- assign leftColumn = listWidth[0] -%}
{%- assign rightColumn = listWidth[1] -%}  

{% assign listWidth = section.settings.masonry_content_width | split: '/' %}
{% assign masonryleftColumn = listWidth[0] %}
{% assign masonryrightColumn = listWidth[1] %} 

{% assign listWidth = section.settings.lap_content_width | split: '/' %}
{% assign lap_leftColumn = listWidth[0] %}
{% assign lap_rightColumn = listWidth[1] %}

{% assign listWidth = section.settings.lap_masonry_content_width | split: '/' %}
{% assign lap_masonryleftColumn = listWidth[0] %}
{% assign lap_masonryrightColumn = listWidth[1] %}

{%- comment -%} Overlay style for images {%- endcomment -%}
{% if section.settings.overlay_style == 'use_overlay' %}
  {% assign overlay_class = 'with-overlay-normal' %}    
{% elsif section.settings.overlay_style == 'use_gradient_overlay' %}
  {% assign overlay_class = 'with-overlay-gradient' %}
{% endif %}

{%- assign blog = blogs[section.settings.blog] -%}

{%- comment -%} Lazy class only when using background image {%- endcomment -%}
{% if section.settings.show_background_image %}
  {% assign lazyScript = "lazyload" %}
{% endif %}

<div
  data-section-id="{{ section.id }}"
  data-section-type="featured-blog-section"
  data-item-per-view="{{ section.settings.items_per_view }}"
  data-laptop-screen-items="{{ section.settings.items_laptop_view }}"
  data-tablet-screen-items="{{ section.settings.items_tablet_view }}"
  data-center-mode="{{ section.settings.enable_center_mode }}"
  data-small-screen-items="{{ section.settings.items_mobile_view }}"
  data-autoplay="{{ section.settings.slider_autoplay }}"
  data-blocks-limit="{{ section.blocks.size }}"
  data-item-space="{{ section.settings.column_gap }}"
  data-auto-height="{{ section.settings.enable_auto_height }}"
  role="region"
  aria-labelledby="blog-section-title-{{ section.id }}"
>
  <!-- Decorative images (hidden from AT) -->
  <div class="leftimage"
       aria-hidden="true"
       role="presentation"
       style="{% if section.settings.image_1 != blank %}background-image:url('{{ section.settings.image_1 | img_url: 'master' }}');{% endif %} background-repeat:no-repeat; position:absolute;width:270px;height:271px;"></div>

  <div
    class="dt-sc-section-wrapper {{ lazyScript }} {{ section_overlay }} {% if section.settings.background_style == 'parallax' %} parallax-initiated{% endif %}"
    {% if section.settings.background_style == 'parallax' %} data-speed="2" data-style="parallax"{% endif %}
    style="{% render 'bg-color-image-padding' %} background-size: {{- section.settings.background_size -}}; {% if section.settings.background_style == 'fixed' %}background-attachment: fixed;{% endif %} background-repeat:{% if section.settings.background_size == 'repeat' %}repeat{% else %}no-repeat;{% endif %}"
    {% include 'bg_image' %}
  >  
    <div class="{% render 'container-settings' %}"> 
      <div class="row {{ section.settings.custom_class_name }}">

        {% if section.settings.section_heading != blank or section.settings.section_sub_heading != blank or section.settings.section_description != blank or section.settings.section_button_link != blank %}
          <div class="dt-sc-heading {% if settings.title_image_enable != blank %} {{ settings.title_image_position | escape }} {% endif %} {{ section.settings.heading_position | escape }}">
            {% if section.settings.section_sub_heading != blank %}
              <h4 class="dt-sc-sub-heading">{{ section.settings.section_sub_heading }}</h4>
            {% endif %}

            {% if section.settings.section_heading != blank %}
              <h2 id="blog-section-title-{{ section.id }}" class="dt-sc-main-heading">
                {{ section.settings.section_heading }}
              </h2>
            {% else %}
              <!-- SR fallback title for landmark -->
              <h2 id="blog-section-title-{{ section.id }}" class="sr-only">{{ 'blogs.article.blog' | t | default: 'Blog' }}</h2>
            {% endif %}

            {% if section.settings.section_description != blank %}
              <p class="dt-sc-heading-description">{{ section.settings.section_description }}</p>
            {% endif %}

            {% if section.settings.section_button_link != blank and section.settings.section_button_text != blank %}
              <a href="{{ section.settings.section_button_link }}"
                 class="dt-sc-btn sadg {% if section.settings.section_button_bg_color != blank %}ctm-btn-padding{% endif %}">
                {{ section.settings.section_button_text }}
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" aria-hidden="true" focusable="false" style="width:36px;height:36px;">
                  <path d="M8,45h72L66.4,31.4c-1.9-1.9-1.9-5.1,0-7c1.9-1.9,5.1-1.9,7,0l22.1,22.1c0,0,0,0,0.1,0.1c0.2,0.2,0.4,0.4,0.6,0.7
                  c0.1,0.1,0.1,0.2,0.1,0.3c0.1,0.2,0.2,0.4,0.3,0.6c0,0.1,0.1,0.2,0.1,0.3c0.1,0.2,0.1,0.4,0.2,0.6c0.1,0.3,0.1,0.6,0.1,1
                  s0,0.7-0.1,1c0,0.2-0.1,0.4-0.2,0.6c0,0.1-0.1,0.2-0.1,0.3c-0.1,0.2-0.2,0.4-0.3,0.6c0,0.1-0.1,0.2-0.1,0.3
                  c-0.2,0.2-0.4,0.5-0.6,0.7c0,0,0,0,0,0.1L73.4,75.6c-1,1-2.2,1.5-3.5,1.5s-2.5-0.5-3.5-1.5c-1.9-1.9-1.9-5.1,0-7L80,55H8
                  c-2.7,0-5-2.2-5-5C3.1,47.3,5.3,45,8,45z"></path>
                </svg>
              </a>
            {% endif %}
          </div>
        {% endif %}

        {%- if section.settings.blog != blank and section.settings.blog.articles_count > 0 -%}

          {% if section.settings.enable_masonry_grid %}
            <!-- Masonry layout -->
            <div class="dt-sc-blog-section dt-sc-masonry-blog {% if section.settings.enable_masonry_reverse %}dt-sc-reverse-columns{% endif %} {% if section.settings.split_blog_layout %}style-2{% endif %} {% if section.settings.enable_slider %}swiper-wrapper{% endif %} {% unless section.settings.enable_slider %}dt-sc-column{% endunless %}{% unless section.settings.enable_slider %} {{ column }}{% endunless %} {% if section.settings.main_banner_style == 'list-style' %} ctm-list-style {% endif %}"
                 role="list">
              <div class="dt-sc-main-blog">
                {% for article in blogs[section.settings.blog].articles limit: 1 %}
                  <div class="dt-sc-blog-item {{ section.settings.text_position }} {{ section.settings.main_banner_style }} {{ section.settings.vertical_position }}"
                       {% if section.settings.main_banner_style == 'overlay-style' %}style="min-height:{{ section.settings.overlay_style_height }}px"{% endif %}
                       role="article"
                       aria-labelledby="post-title-{{ article.id }}">
                    <div class="dt-sc-blog-image {{ overlay_class }}">
                      {% if article.image %}
                        <div class="article__grid-image-wrapper wow animated fadeInDown">
                          <a href="{{ article.url }}" aria-label="{{ article.title | escape }}">
                            {%- assign img_url = article.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                            <img class="lazyload"
                                 data-src="{{ img_url }}"
                                 data-widths="[180, 360, 470, 600, 770, 970, 1060, 1280, 1512, 1728, 2048]"
                                 data-aspectratio="{{ article.image.aspect_ratio }}"
                                 data-sizes="auto"
                                 alt="{{ article.image.alt | default: article.title | escape }}"
                                 loading="lazy"
                                 decoding="async">
                            <noscript>
                              {{ article.image | img_url: '480x480', scale: 2 | img_tag: article.image.alt | replace: '<img ', '<img loading="lazy" decoding="async" class="dt-sc-noscript-image" ' }}
                            </noscript> 
                          </a>
                        </div>
                      {% endif %}
                    </div>

                    <div class="dt-sc-blog-content">
                      {% if section.settings.blog_comments %}
                        {% if blog.comments_enabled? and article.comments_count > 0 %}
                          <p class="dt-sc-blog-comment">
                            <span aria-hidden="true">{% include 'icon-comment' %}</span>
                            {{ 'blogs.comments.comments_with_count' | t: count: article.comments_count }}
                        {% endif %}
                      {% endif %}

                      {% if section.settings.blog_show_tag and article.tags.size > 0 %}
                        <p class="dt-sc-blog-tags">
                          <span aria-hidden="true">{% include 'icon-tag' %}</span>
                          {% for tag in article.tags %}                  
                            <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="article__grid-tag" rel="tag">{{ tag }}</a>
                          {% endfor %}
                        </p>
                      {% endif %}

                      <h3 id="post-title-{{ article.id }}" class="dt-sc-blog-title wow animated fadeInDown">
                        <a href="{{ article.url }}" rel="bookmark">{{ article.title }}</a>
                      </h3>

                      {% if section.settings.blog_show_description %}
                        <div class="dt-sc-blog-description wow animated fadeInDown">
                          {%- if article.excerpt.size > 0 -%}
                            {{ article.excerpt | strip_html | truncatewords: 25 }}
                          {%- else -%}
                            {{ article.content | strip_html | truncatewords: 25 }}
                          {%- endif -%}
                        </div>
                      {% endif %}

                      <div class="dt-sc-blog-meta {% if section.settings.enable_blog_icons %}with-meta-icons{% endif %} wow animated fadeInDown">
                        {% if section.settings.blog_show_author %}
                          <p class="dt-sc-blog-author">
                            <span aria-hidden="true">{% include 'icon-author' %}</span>
                            <span>{{ 'blogs.article.by_author' | t: author: article.author }}</span>
                          </p>
                        {% endif %}
                        {% if section.settings.blog_show_date %}
                          <p class="dt-sc-blog-date">
                            <span aria-hidden="true">{% include 'icon-date' %}</span>
                            {{ article.published_at | time_tag: format: 'date' }}
                          </p>
                        {% endif %}
                      </div>

                      {% if section.settings.blog_show_button %}
                        <a href="{{ article.url }}" class="dt-sc-btn wow animated fadeInDown">
                          {{ 'blogs.article.read_more' | t }}
                          <span class="sr-only"> — {{ article.title }}</span>
                        </a> 
                      {% endif %}
                    </div>
                  </div>
                {% endfor %}
              </div>

              <div class="dt-sc-additional-blogs">
                {% for article in blogs[section.settings.blog].articles limit: section.settings.post_limit offset: 1 %}
                  <div class="dt-sc-blog-item {{ section.settings.text_position }} {{ section.settings.additional_banner_style }} {{ section.settings.vertical_position }}"
                       {% if section.settings.additional_banner_style == 'overlay-style' %}style="min-height:{{ section.settings.overlay_style_height }}px"{% endif %}
                       role="article"
                       aria-labelledby="post-title-{{ article.id }}">
                    <div class="dt-sc-blog-image {{ overlay_class }}">
                      {% if article.image %}
                        <div class="article__grid-image-wrapper wow animated fadeInDown">
                          <a href="{{ article.url }}" aria-label="{{ article.title | escape }}">
                            {%- assign img_url = article.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
                            <img class="lazyload"
                                 data-src="{{ img_url }}"
                                 data-widths="[180, 360, 470, 600, 770, 970, 1060, 1280, 1512, 1728, 2048]"
                                 data-aspectratio="{{ article.image.aspect_ratio }}"
                                 data-sizes="auto"            
                                 alt="{{ article.image.alt | default: article.title | escape }}"
                                 loading="lazy"
                                 decoding="async">
                            <noscript>
                              {{ article.image | img_url: '480x480', scale: 2 | img_tag: article.image.alt | replace: '<img ', '<img loading="lazy" decoding="async" class="dt-sc-noscript-image" ' }}
                            </noscript>
                          </a>
                        </div>
                      {% endif %}
                    </div>

                    <div class="dt-sc-blog-content">
                      {% if section.settings.blog_comments and blog.comments_enabled? and article.comments_count > 0 %}
                        <p class="dt-sc-blog-comment">
                          <span aria-hidden="true">{% include 'icon-comment' %}</span>
                          {{ 'blogs.comments.comments_with_count' | t: count: article.comments_count }}
                        </p>
                      {% endif %}

                      {% if section.settings.blog_show_tag and article.tags.size > 0 %}
                        <p class="dt-sc-blog-tags">
                          <span aria-hidden="true">{% include 'icon-tag' %}</span>
                          {% for tag in article.tags %}
                            <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="article__grid-tag" rel="tag">{{ tag }}</a>
                          {% endfor %}
                        </p>
                      {% endif %}

                      <h3 id="post-title-{{ article.id }}" class="dt-sc-blog-title wow animated fadeInDown">
                        <a href="{{ article.url }}" rel="bookmark">{{ article.title }}</a>
                      </h3>

                      {% if section.settings.blog_show_description %}
                        <div class="dt-sc-blog-description wow animated fadeInDown">
                          {% if article.excerpt.size > 0 %}
                            {{ article.excerpt }}
                          {% else %}
                            {{ article.content | strip_html | truncate: 75 }}
                          {% endif %}
                        </div>
                      {% endif %}

                      <div class="dt-sc-blog-meta {% if section.settings.enable_blog_icons %}with-meta-icons{% endif %} wow animated fadeInDown">
                        {% if section.settings.blog_show_author %}
                          <p class="dt-sc-blog-author">
                            <span aria-hidden="true">{% include 'icon-author' %}</span>
                            <span>{{ 'blogs.article.by_author' | t: author: article.author }}</span>
                          </p>
                        {% endif %}
                        {% if section.settings.blog_show_date %}
                          <p class="dt-sc-blog-date">
                            <span aria-hidden="true">{% include 'icon-date' %}</span>
                            {{ article.published_at | time_tag: format: 'date' }}
                          </p>
                        {% endif %}
                      </div>

                      {% if section.settings.blog_show_button %}
                        <a href="{{ article.url }}" class="dt-sc-btn wow animated fadeInDown">
                          {{ 'blogs.article.read_more' | t }}
                          <span class="sr-only"> — {{ article.title }}</span>
                        </a>
                      {% endif %}
                    </div>
                  </div>
                {% endfor %}
              </div>
            </div>

          {% else %}
            {%- comment -%} Slider / Grid (non-masonry) {%- endcomment -%}
            {% if section.settings.enable_slider %}
              <div class="dt-sc-swiper-slider swiper-container {% if section.settings.dots %} {{ section.settings.carousel_pagination_alignment }} {% endif %} {% if section.settings.arrows %} {{ section.settings.nav_arrow_position }} {{ section.settings.center_nav_arrow_alignment }} {% endif %}"
                   aria-roledescription="carousel"
                   aria-label="{{ section.settings.section_heading | default: 'Blog posts carousel' }}">
            {% endif %}

            {% if section.settings.enable_slider %}
              <div id="swiper-{{ section.id }}-slider">
            {% endif %}

            <div class="dt-sc-blog-section {% if section.settings.split_blog_layout %} style-2 {% endif %} {% if section.settings.enable_slider %}swiper-wrapper{% endif %} {% unless section.settings.enable_slider %}dt-sc-column{% endunless %}{% unless section.settings.enable_slider %} {{ column }}{% endunless %}"
                 role="list">
              {% for article in blogs[section.settings.blog].articles limit: section.settings.post_limit %}
                <div class="dt-sc-blog-item {% if section.settings.enable_slider %}swiper-slide{% endif %} {{ section.settings.text_position }} {{ item_style }} {{ section.settings.vertical_position }}"
                     {% if section.settings.block_banner_style == 'overlay-style' %}style="min-height:{{ section.settings.overlay_style_height }}px"{% endif %}
                     role="article"
                     aria-labelledby="post-title-{{ article.id }}">
                  <div class="dt-sc-blog-image {{ overlay_class }}">
                    {% if article.image %}
                      <div class="article__grid-image-wrapper wow animated fadeInDown">
                        <a href="{{ article.url }}" aria-label="{{ article.title | escape }}">
                          {{ article.image
                            | img_url: 'master'
                            | img_tag: article.title, 'article__grid-image'
                            | replace: '<img ', '<img loading="lazy" decoding="async" ' }}
                        </a>
                      </div>
                    {% endif %}
                  </div>

                  <div class="dt-sc-blog-content">
                    {% if section.settings.blog_comments and blog.comments_enabled? and article.comments_count > 0 %}
                      <p class="dt-sc-blog-comment">
                        <span aria-hidden="true">{% include 'icon-comment' %}</span>
                        {{ 'blogs.comments.comments_with_count' | t: count: article.comments_count }}
                      </p>
                    {% endif %}

                    {% if section.settings.blog_show_tag and article.tags.size > 0 %}
                      <p class="dt-sc-blog-tags">
                        <span aria-hidden="true">{% include 'icon-tag' %}</span>
                        {% for tag in article.tags %}
                          <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="article__grid-tag" rel="tag">{{ tag }}</a>
                        {% endfor %}
                      </p>
                    {% endif %}

                    <h3 id="post-title-{{ article.id }}" class="dt-sc-blog-title wow animated fadeInDown">
                      <a href="{{ article.url }}" rel="bookmark">{{ article.title }}</a>
                    </h3>

                    {% if section.settings.blog_show_description %}
                      <div class="dt-sc-blog-description wow animated fadeInDown">
                        {% if article.excerpt.size > 0 %}
                          {{ article.excerpt }}
                        {% else %}
                          {{ article.content | strip_html | truncate: 120 }}
                        {% endif %}
                      </div>
                    {% endif %}

                    <div class="dt-sc-blog-meta {% if section.settings.enable_blog_icons %}with-meta-icons{% endif %} wow animated fadeInDown">
                      {% if section.settings.blog_show_author %}
                        <p class="dt-sc-blog-author">
                          <span aria-hidden="true">{% include 'icon-author' %}</span>
                          <span>{{ 'blogs.article.by_author' | t: author: article.author }}</span>
                        </p>
                      {% endif %}
                      {% if section.settings.blog_show_date %}
                        <p class="dt-sc-blog-date">
                          <span aria-hidden="true">{% include 'icon-date' %}</span>
                          {{ article.published_at | time_tag: format: 'date' }}
                        </p>
                      {% endif %}
                    </div>

                    {% if section.settings.blog_show_button %}
                      <a href="{{ article.url }}" class="dt-sc-btn wow animated fadeInDown">
                        {{ 'blogs.article.read_more' | t }}
                        <span class="sr-only"> — {{ article.title }}</span>
                      </a>
                    {% endif %}
                  </div>
                </div> 
              {% endfor %}
            </div>

            {% if section.settings.enable_slider %}</div>{% endif %}

            {% if section.settings.enable_slider %}
              {% if section.settings.arrows %}
                <div class="swiper-{{ section.id }}-arrows swiper-arrows" aria-label="Carousel Navigation">
                  <div id="swiper-{{ section.id }}-next" class="swiper-button-next dt-sc-btn" role="button" tabindex="0" aria-label="Next slide"></div>
                  <div id="swiper-{{ section.id }}-prev" class="swiper-button-prev dt-sc-btn" role="button" tabindex="0" aria-label="Previous slide"></div>
                </div>  
              {% endif  %}

              {% if section.settings.dots %}
                <div id="swiper-{{ section.id }}-pagination" class="swiper-pagination" aria-label="Carousel Pagination"></div>
              {% endif %}
            {% endif %}
          {% endif %}

        {% else %}
          <!-- Empty state -->
          <div class="empty_blog" role="list">
            {% for i in (1..3) -%}
              {%- assign placeholder_image_index = forloop.index0 | modulo: 3 | plus: 1 -%}
              {%- assign placeholder_image = 'collection-' | append: placeholder_image_index -%}
              <div class="blog-placeholder" role="listitem" aria-label="Placeholder blog item">
                <div class="placeholder media--landscape">
                  {% capture current %}{% cycle 1, 2, 3, 4, 5, 6 %}{% endcapture %}
                  {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg dark' }}
                </div>
                <div class="blog-placeholder__content">
                  <h3>{{ 'onboard.featured_blog.title' | t }}</h3>
                  <p class="rte-width">{{ 'onboard.featured_blog.content' | t }}</p>
                </div>
              </div>
            {% endfor %}
          </div>   
        {% endif %}
      </div>
    </div>
  </div>

  <!-- Decorative images (hidden from AT) -->
  <div class="rightimage_top"
       aria-hidden="true"
       role="presentation"
       style="{% if section.settings.image_3 != blank %} background-image:url('{{ section.settings.image_3 | img_url: 'master' }}'); background-repeat:no-repeat; position:absolute;width:128px;height:134px;{% endif %}"></div>

  <div class="rightimage"
       aria-hidden="true"
       role="presentation"
       style="{% if section.settings.image_2 != blank %} background-image:url('{{ section.settings.image_2 | img_url: 'master' }}'); background-repeat:no-repeat; position:absolute;width:276px;height:228px;{% endif %}"></div>
</div>

<style>
  .empty_blog{ display:flex; width:100%;}
  .empty_blog .blog-placeholder{ margin:0 10px; width:100%; }
  .placeholder.media--landscape svg{ width:100%; height:100%; background-color: var(--DTBodyBGColor); }

  /* Landmark wrapper */
  #shopify-section-{{ section.id }}.home-blog-section { position:relative; }

  /* Heading group */
  #shopify-section-{{ section.id }}.home-blog-section .dt-sc-heading{ position:relative; margin-bottom:50px; }
  #shopify-section-{{ section.id }}.home-blog-section .dt-sc-heading .dt-sc-main-heading {
    color: var(--DTColor_Heading); color: {{ section.settings.section_heading_color }}; padding-bottom:50px;
  }
  #shopify-section-{{ section.id }}.home-blog-section .dt-sc-heading .dt-sc-sub-heading {
    color: var(--DTColor_Heading); color: {{ section.settings.section_sub_heading_color }};
  }
  #shopify-section-{{ section.id }}.home-blog-section .dt-sc-heading .dt-sc-heading-description {
    color: var(--DTColor_Body); color: {{ section.settings.section_description_color }};
    position: absolute; left: 0; bottom:-30px; font-size: var(--DTFontSize_H5);
  }
  #shopify-section-{{ section.id }}.home-blog-section .dt-sc-heading .dt-sc-btn {
    background: var(--DT_Button_BG_Color); background: {{ section.settings.section_button_bg_color }};
    color: var(--DT_Button_Text_Color); color: {{ section.settings.section_button_text_color }}; border:none;
    position: absolute; right: 0; bottom:-30px; font-size: var(--DTFontSize_H5); padding:0;
  }
  #shopify-section-{{ section.id }}.home-blog-section .dt-sc-heading .dt-sc-btn:hover {
    background: var(--DT_Button_BG_Hover_Color); background: {{ section.settings.section_button_hover_bg_color }};
    color: var(--DT_Button_Text_Hover_Color); color: {{ section.settings.section_button_hover_text_color }};
  }

  /* Section overlay */
  #shopify-section-{{ section.id }}.home-blog-section .dt-sc-overlay:before {
    color: var(--DTTertiaryColor); color: {{ section.settings.background_color }};
    background: currentcolor; opacity: {{ section.settings.overlay_transparency }};
