<script>
  jQuery(document).ready(function($) {  
    "use strict";

    // Build mobile menu items from desktop lists
    if($(window).width() {% if section.settings.show_mobile_as_default -%} > 0 {%- else -%} <= {{ section.settings.mobile_screen_width }} {% endif -%} ) {
      $('ul.secondary__nav').each(function(){
        var phrase = $(this).html();
        $(phrase).insertAfter("ul.dt-desktop-menu > li:last-child");
      });

      // Move Nav as Mobile Nav
      $("nav#AccessibleNav").each(function() {
        var d = $(this).data('menu'),
            c = $(this).find('ul[data-menu="' + d + '"]').clone().removeClass('dt-nav'),
            m = $('body').find('.mobile-menu[data-menu="' + d + '"]');
        $('[data-animation]', c).each(function(ix, ele) {
          var $classes = $(ele).attr("class"),
              $animation = $(ele).attr("data-animation");
          $classes = $classes.replace($animation, '');
          $(ele).attr("class", $classes);
        });
        c.prependTo(m);
      });

      mobileTrigger();

      // Closing Mobile Nav
      $('li.close-nav, body > .mobile-menu-overlay').on('click', function() { closeMobNav(); });

      // Sub Menu toggle in Mobile
      $('.menu-item-has-children > a').on('click', function(event) {
        if ($('body').hasClass('nav-is-visible')) {
          event.preventDefault();
          var a = $(this).clone();
          $(this).next('.sub-menu-block').find('.see-all').html(a);
        }
        var selected = $(this);
        if (selected.next('div.sub-menu-block').hasClass('is-hidden')) {
          selected.addClass('selected').next('div.sub-menu-block').removeClass('is-hidden');
        } else {
          selected.removeClass('selected').next('div.sub-menu-block').addClass('is-hidden');
        }
      });

      // Go Back in Mobile Menu
      $('.go-back').on('click', function() {
        $(this).parent('div.sub-menu-block').addClass('is-hidden');
      });
    }

    {% unless section.settings.show_mobile_as_default %}
    // Desktop mega menu behaviors
    if($(window).width() >= {{ section.settings.mobile_screen_width | plus: 1 }}) {
      jQuery('.menu-item-has-children > a').mouseenter(function(e) {
        var selected = $(this);
        if (selected.next('div.sub-menu-block').hasClass('is-hidden')) {
          selected.addClass('selected').next('div.sub-menu-block').removeClass('is-hidden');
        } else {
          selected.removeClass('selected').next('div.sub-menu-block').addClass('is-hidden');
        }
        e.preventDefault();
      }).mouseleave(function(e) {
        var selected = $(this);
        if (selected.next('div.sub-menu-block').hasClass('is-hidden')) {
          selected.addClass('selected').next('div.sub-menu-block').removeClass('is-hidden');
        } else {
          selected.removeClass('selected').next('div.sub-menu-block').addClass('is-hidden');
        }
        e.preventDefault();
      });

      function megaMenu() {
        var parentRow, parentLeft;
        if($("#header .container-fluid").length) {
          parentRow = $("#header .container-fluid > .row");
          parentLeft = parseInt(parentRow.css("marginLeft").replace('px', ''));
        } else {
          parentRow = $("#header .container .row");
          parentLeft = parseInt(parentRow.offset().left);
        }
        var parentWidth = parentRow.width();
        $("#header .dt-sc-header-logo-sec .dt-nav li:not(.close-nav)").each(function() {
          var thisItem = $(this);
          if(thisItem.hasClass('has-mega-menu')) {
            var thisItemLeft = thisItem.find('a').offset().left;
            var menuLeft = parseInt(thisItemLeft-parentLeft);
            thisItem.find('.sub-menu-block').css('width', parentWidth);  
            thisItem.find('.sub-menu-block').css('left', -menuLeft);
          }
        });
        $("#header .sticky-header-active .dt-nav li:not(.close-nav)").each(function() {
          var thisItem = $(this);
          if(thisItem.hasClass('has-mega-menu')) {
            var thisItemLeft = thisItem.find('a').offset().left;
            var menuLeft = parseInt(thisItemLeft-parentLeft);
            thisItem.find('.sub-menu-block').css('width', parentWidth);  
            thisItem.find('.sub-menu-block').css('left', -menuLeft);
          }
        });
        window.setTimeout(function(){ $(window).trigger('resize'); }, 800);
      }
      var megaMenuResize = false;      
      $(window).bind("resize", function() {  
        if(!megaMenuResize) { megaMenu(); megaMenuResize = true; }
      });
      megaMenu();
    }
    {% endunless %}

    // Sticky header clone
    {% if section.settings.use_sticky_header %}
    if( $("#sticky-header").length > 0 ) {
      var $sticky_header_cloned = $('#sticky-header').clone();
      $sticky_header_cloned.attr('id', 'sticky-header-active').removeClass('dt-sc-header-logo-sec sticky_remove_on_mobile sticky-header').addClass('sticky-header-active');
      $( $sticky_header_cloned ).insertAfter( $('.sticky-header') );
      var position = $('.dt-sc-header-logo-sec.sticky-header').position().top + 300;
      $(window).scroll(function() {
        mobileTrigger();
        var scroll = $(window).scrollTop();        
        if(scroll > position) {           
          $("#sticky-header-active.sticky-header-active").addClass('dt-header-top dt-header-scroll').show();
        } else {
          $("#sticky-header-active.sticky-header-active").removeClass('dt-header-top dt-header-scroll');
        }
      });
    }
    {% endif %}
  });

  // TRIGGER MENU
  function mobileTrigger(){
    $('.menu-trigger').off('click').on('click', function() {    
      $('body').find('.mobile-menu').addClass('nav-is-visible');
      $('body').find('.mobile-menu-overlay').addClass('is-visible');
      $('body').addClass('nav-is-visible');
      $("ul.dt-sc-list-inline.dt-desktop-menu:nth-child(2)").remove();
    });
  }
  function closeMobNav() {
    $('body').removeClass('nav-is-visible');
    $('.mobile-menu-overlay').removeClass('is-visible');
    $('.mobile-menu').removeClass('nav-is-visible');
    $('.menu-item-has-children a').removeClass('selected');
    $('.menu-item-has-children div.sub-menu-block').addClass('is-hidden');
  }
  $(window).on('resize load',function() {
    mobileTrigger();
    closeMobNav();    
  });

  // Tabs (kept)
  $(function() {
    if($(window).width() >= {{ section.settings.mobile_screen_width | plus: 1  }}) {
      $('.tabs-nav a').click(function() {
        $('.tabs-nav li').removeClass('active');
        $(this).parent().addClass('active');
        let currentTab = $(this).attr('href');
        $('.tabs-content li.dt-sc-menu-tabs').hide();
        $(currentTab).show();
        return false;
      });
    }
    if($(window).width() {% if section.settings.show_mobile_as_default -%} > 0 {%- else -%} <= {{ section.settings.mobile_screen_width }} {% endif -%} ) {
      $('.mobileTabs .tabs  li').each(function(){
        $(this).click(function(){ $(this).next('div').slideToggle(1000); });
      });
    }
  });
</script>

