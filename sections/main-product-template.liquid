  {% endif %}
{% endunless %}

<style>

  .StickySidebar {
    color: #881d3e;
  }


  .dt-sc-accordion-container .dt-sc-accordion-btn {
    background: none;
    border-bottom: 2px solid #881d3e;
  }


  /* -------- Section Background (full width) -------- */
  #shopify-section-{{ section.id }}.main-product-template {
    background: {{ section.settings.section_bg_color | default: 'transparent' }};
    position: relative;
  }

  /* -------- OUTER PADDING / MARGIN (outside inner card) -------- */
