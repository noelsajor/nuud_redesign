  {% when '2' %}{% assign column = 'two-column' %}
  {% when '3' %}{% assign column = 'three-column' %}              
  {% when '4' %}{% assign column = 'four-column' %}               
  {% else %}{% assign column = 'three-column' %}              
{% endcase %}

