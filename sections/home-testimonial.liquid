{% if section.settings.enable %}
{% if section.blocks.size > 0 %}
{% case section.settings.grid %}
{% when '1' %}
{% when '2' %}
{%- assign column = 'two-column' -%}
{% when '3' %}
{%- assign column = 'three-column' -%}              
{% when '4' %}
{%- assign column = 'four-column' -%}               
{% else %}
{%- assign column = 'three-column' -%}              
{% endcase %} 

{% case section.settings.boxed_styles == 'overall_boxed' %}
{% when 'overall_boxed' %}
{%- assign boxed_styles = 'overall_boxed' %}
{% when 'content_boxed' %}
{%- assign boxed_styles = 'content_boxed' %}
{% when 'quote_boxed' %}
{%- assign boxed_styles = 'quote_boxed' %}
{% when 'default' %}
{%- assign boxed_styles = 'default' %}
{% endcase %} 

