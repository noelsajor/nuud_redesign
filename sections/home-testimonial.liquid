          {% for block in section.blocks %}   
          {% assign _card_bg = block.settings.card_image | default: block.settings.icon %}
          {% assign _card_style_attr = '' %}
          {% if section.settings.card_on_image %}
            {% assign _card_style_attr = 'background-image:url(' | append: _card_bg | img_url: 'master' | append: ');' | append: 'min-height:' | append: section.settings.card_min_height | append: 'px;' | append: '--CardOverlayOpacity:' | append: section.settings.card_overlay_opacity | append: ';' %}
