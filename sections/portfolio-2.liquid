<script src='https://npmcdn.com/imagesloaded@4/imagesloaded.pkgd.js'></script>

{% assign margin = section.settings.margin | split: ',' %}
{% assign margin_top = margin[0] %}
{% assign margin_bottom = margin[1] %}
{% assign padding = section.settings.padding | split: ',' %}
{% assign padding_top = padding[0] %}
{% assign padding_bottom = padding[1] %}

{% case section.settings.grid %}
  {% when '1' %}{% assign column = '100%' %}
  {% when '2' %}{% assign column = '50%' %}
  {% when '3' %}{% assign column = '33.33%' %}
  {% when '4' %}{% assign column = '24.75%' %}
  {% when '5' %}{% assign column = '19.6%' %}
  {% when '6' %}{% assign column = '16.2%' %}
  {% else %}{% assign column = '33.33%' %}
{% endcase %}

{% if section.settings.block_banner_style == 'grid-style' %}
  {% assign item_style = 'grid-style' %}
{% elsif section.settings.block_banner_style == 'list-style' %}
  {% assign verticalStyle = section.settings.vertical_position %}
  {% assign item_style = 'list-style' %}
{% elsif section.settings.block_banner_style == 'overlay-style' %}
  {% assign verticalStyle = section.settings.vertical_position %}
  {% assign item_style = 'overlay-style' %}
{% endif %}

{% if section.settings.enable_overlay %}
  {% assign section_overlay = 'dt-sc-overlay' %}
{% endif %}

{% assign listWidth = section.settings.content_width | split: '/' %}
{% assign leftColumn = listWidth[0] %}
{% assign rightColumn = listWidth[1] %}

{% if section.settings.overlay_style == 'use_overlay' %}
  {% assign overlay_class = 'with-overlay-normal' %}
{% elsif section.settings.overlay_style == 'use_gradient_overlay' %}
  {% assign overlay_class = 'with-overlay-gradient' %}
{% endif %}

{% assign blog = blogs[section.settings.blog] %}
{% if section.settings.show_background_image %}
  {% assign lazyScript = "lazyload" %}
{% endif %}

<div
  data-section-id="{{ section.id }}"
  data-section-type="featured-blog-section"
  data-item-per-view="{{ section.settings.items_per_view }}"
  data-autoplay="{{ section.settings.slider_autoplay }}"
  data-small-screen-items="1"
  data-blocks-limit="{{ section.blocks.size }}"
  data-item-space="{{ section.settings.column_gap }}"
  data-auto-height="{{ section.settings.enable_auto_height }}"
>
  <div
    class="dt-sc-section-wrapper {{ lazyScript }} {{ section_overlay }} {% if section.settings.background_style == 'parallax' %}parallax-initiated{% endif %}"
    {% if section.settings.background_style == 'parallax' %} data-speed="2" data-style="parallax"{% endif %}
    style="
      {% if section.settings.show_background_image and section.settings.background_image != blank %}
        background-image: url({{ section.settings.background_image | img_url: 'master' }});
        background-size: {{ section.settings.background_size }};
        {% if section.settings.background_style == 'fixed' %}background-attachment: fixed;{% endif %}
        background-repeat:{% if section.settings.background_size == 'repeat' %}repeat{% else %}no-repeat{% endif %};
        background-position: center center;
      {% else %}
        background-image: none;
        background-repeat: no-repeat;
        background-position: center center;
      {% endif %}
      background-color: {{ section.settings.background_color | default: 'transparent' }};
    "
  >
    <!-- Single source of layout width -->
    <div class="max-container">
      <!-- Neutral inner wrapper: no max-width -->
      <div class="inner-container">
        <div class="row {{ section.settings.custom_class_name }}">
          {% render 'section-heading', class: section.id %}

          {%- comment -%}
            Filter bar with CSS vars for active colors (used by JS painter).
          {%- endcomment -%}
          {% assign filters_raw = section.settings.filter_tags | default: '' %}
          {% assign filters = filters_raw | split: ',' %}
          {% if section.settings.enable_filter and filters_raw != blank %}
            <div
              id="blog-filter-{{ section.id }}"
              class="blog-filter"
              role="tablist"
              aria-label="Filter articles by tag"
              style="
                --filter-active-bg: {{ section.settings.blog_button_bg_hover_color | default: section.settings.section_button_hover_bg_color }};
                --filter-active-fg: {{ section.settings.blog_button_text_hover_color | default: section.settings.section_button_hover_text_color }};
              "
            >
              <button
                class="filter-btn dt-sc-btn ctm-btn-padding is-active"
                data-filter="*"
                aria-pressed="true"
                type="button"
              >
                {{ section.settings.filter_all_label | default: 'All' }}
              </button>
              {% for raw in filters %}
                {% assign lbl = raw | strip %}
                {% if lbl != blank %}
                  {% assign h = lbl | handleize %}
                  <button
                    class="filter-btn dt-sc-btn ctm-btn-padding"
                    data-filter=".tag-{{ h }}"
                    aria-pressed="false"
                    type="button"
                  >
                    {{ lbl }}
                  </button>
                {% endif %}
              {% endfor %}
            </div>
          {% endif %}

          {% unless blog.articles_count == 0 %}
            <div class="dt-sc-blog-section isotope-grid" id="blog-grid-{{ section.id }}">
              {% for article in blogs[section.settings.blog].articles limit: section.settings.post_limit %}
                <div class="isotope-selector dt-sc-blog-item {{ section.settings.text_position }} {{ item_style }} {{ section.settings.vertical_position }}{% for t in article.tags %} tag-{{ t | handle }}{% endfor %}"
                     {% if section.settings.block_banner_style == 'overlay-style' %}style="min-height:{{ section.settings.overlay_style_height }}px"{% endif %}
                     data-item-index="{{ forloop.index }}"
                >
                  <div class="dt-sc-blog-image {{ overlay_class }}">
                    {% if article.image %}
                      <div class="article__grid-image-wrapper wow animated fadeInDown">
                        {{ article.image | img_url: 'master' | img_tag: article.title, 'article__grid-image' }}
                      </div>
                    {% endif %}
                  </div>

                  <div class="dt-sc-blog-content">
                    <h6 class="dt-sc-blog-title wow animated fadeInDown"><a href="{{ article.url }}">{{ article.title }}</a></h6>

                    <div class="dt-sc-blog-meta wow animated fadeInDown">
                      {% if section.settings.blog_show_author %}
                        <p class="dt-sc-blog-author">
                          {% include 'icon-author' %}
                          <span>{{ 'blogs.article.by_author' | t: author: article.author }}</span>
                        </p>
                      {% endif %}

                      {% if section.settings.blog_show_date %}
                        <p class="dt-sc-blog-date">
                          {% include 'icon-date' %}
                          {{ article.published_at | time_tag: format: 'date' }}
                        </p>
                      {% endif %}

                      {% if section.settings.blog_comments %}
                        {% if blog.comments_enabled? and article.comments_count > 0 %}
                          <p class="dt-sc-blog-comment">
                            {% include 'icon-comment' %} {{ 'blogs.comments.comments_with_count' | t: count: article.comments_count }}
                          </p>
                        {% endif %}
                      {% endif %}

                      {% if section.settings.blog_show_tag and article.tags.size > 0 %}
                        <p class="dt-sc-blog-tags">
                          {% include 'icon-tag' %}
                          {% for tag in article.tags %}
                            <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="article__grid-tag">{{ tag }}</a>
                          {% endfor %}
                        </p>
                      {% endif %}
                    </div>

                    {% if section.settings.blog_show_description %}
                      <div class="dt-sc-blog-description wow animated fadeInDown">
                        {% if article.excerpt.size > 0 %}
                          {{ article.excerpt }}
                        {% else %}
                          {{ article.content | strip_html | truncate: 150 }}
                        {% endif %}
                      </div>
                    {% endif %}

                    {% if section.settings.blog_show_button %}
                      <a href="{{ article.url }}" class="dt-sc-btn wow animated fadeInDown">{{ 'blogs.article.read_more' | t }}</a>
                    {% endif %}
                  </div>
                </div>
              {% endfor %}
            </div>

            {%- comment -%} Pagination controls (optional) {%- endcomment -%}
            {% if section.settings.enable_pagination and section.settings.post_limit > section.settings.pagination_step %}
              <div class="blog-pagination-controls" id="blog-pagination-{{ section.id }}">
                <button type="button" class="dt-sc-btn ctm-btn-padding" id="blog-load-more-{{ section.id }}">
                  {{ section.settings.pagination_more_label | default: 'Show more' }}
                </button>
                <button type="button" class="dt-sc-btn ctm-btn-padding" id="blog-load-reset-{{ section.id }}" style="display:none">
                  {{ section.settings.pagination_reset_label | default: 'Show less' }}
                </button>
              </div>
            {% endif %}
          {% endunless %}
        </div>
      </div>
    </div>
    <!-- /max-container -->
  </div>
</div>

<script type="text/javascript">
  (function($){
    $(function(){
      var $grid = $('#blog-grid-{{ section.id }}');

      $grid.imagesLoaded(function(){
        $grid.isotope({
          itemSelector: '.isotope-selector',
          percentPosition: true,
          layoutMode: 'masonry',
          fitWidth: true,
          masonry: { gutter: {{ section.settings.gallery_spacing }} }
        });
      });

      var $filterBar = $('#blog-filter-{{ section.id }}');

      function paintActiveImportant($btn){
        $btn.siblings('.filter-btn').each(function(){
          this.style.removeProperty('background-color');
          this.style.removeProperty('color');
          this.style.removeProperty('border-color');
        });

        var root = document.getElementById('blog-filter-{{ section.id }}');
        if (!root) return;
        var cs = getComputedStyle(root);
        var bg = cs.getPropertyValue('--filter-active-bg').trim() || '';
        var fg = cs.getPropertyValue('--filter-active-fg').trim() || '';

        $btn
          .addClass('is-active')
          .attr('aria-pressed','true')
          .siblings('.filter-btn')
          .removeClass('is-active')
          .attr('aria-pressed','false');

        if ($btn[0]){
          $btn[0].style.setProperty('background-color', bg, 'important');
          $btn[0].style.setProperty('color', fg, 'important');
          $btn[0].style.setProperty('border-color', 'transparent', 'important');
        }
      }

      function activateFilter($btn){
        var filterValue = $btn.attr('data-filter') || '*';
        $grid.isotope({ filter: filterValue }).isotope('layout');
        paintActiveImportant($btn);
      }

      if ($filterBar.length){
        $filterBar.on('click', 'button.filter-btn', function(e){
          e.preventDefault();
          activateFilter($(this));
        });
        $filterBar.on('keydown', 'button.filter-btn', function(e){
          if (e.key === 'Enter' || e.key === ' '){
            e.preventDefault();
            activateFilter($(this));
          }
        });
        var $initial = $filterBar.find('button.filter-btn.is-active,[aria-pressed="true"]').first();
        if ($initial.length) paintActiveImportant($initial);
      }

      // ===== Pagination (show more) =====
      {% if section.settings.enable_pagination and section.settings.post_limit > section.settings.pagination_step %}
      var step = {{ section.settings.pagination_step | default: 4 | plus: 0 }};
      var $items = $grid.find('.isotope-selector');
      var $moreBtn = $('#blog-load-more-{{ section.id }}');
      var $resetBtn = $('#blog-load-reset-{{ section.id }}');

      function applyVisibility(visibleCount){
        $items.each(function(i, el){
          var shouldShow = (i < visibleCount);
          el.classList.toggle('is-hidden', !shouldShow);
        });
        $grid.isotope('layout');
      }

      // Initial state
      var visible = Math.min(step, $items.length);
      applyVisibility(visible);

      if (visible >= $items.length){
        $moreBtn.hide();
      }

      $moreBtn.on('click', function(e){
        e.preventDefault();
        visible = Math.min(visible + step, $items.length);
        applyVisibility(visible);
        if (visible >= $items.length){
          $moreBtn.hide();
        }
        $resetBtn.show();
      });

      $resetBtn.on('click', function(e){
        e.preventDefault();
        visible = Math.min(step, $items.length);
        applyVisibility(visible);
        $resetBtn.hide();
        if ($items.length > step){ $moreBtn.show(); }
      });

      // Re-layout on window changes
      var resizeTimer;
      $(window).on('resize orientationchange', function(){
        clearTimeout(resizeTimer);
        resizeTimer = setTimeout(function(){ $grid.isotope('layout'); }, 150);
      });
      {% else %}
      // Re-layout on window changes (no pagination path)
      var resizeTimer;
      $(window).on('resize orientationchange', function(){
        clearTimeout(resizeTimer);
        resizeTimer = setTimeout(function(){ $grid.isotope('layout'); }, 150);
      });
      {% endif %}
    });
  })(jQuery);
</script>

<style>
