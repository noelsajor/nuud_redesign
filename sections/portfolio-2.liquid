  #shopify-section-{{section.id}} .max-container{
    max-width:1280px;
    margin:0 auto;
    padding:80px 40px;
    box-sizing:border-box;
  }

  /* Neutralize any nested containers trying to constrain width */
  #shopify-section-{{section.id}} .inner-container{
    max-width:none !important;
    width:100%;
    margin:0;
    padding:0;
    box-sizing:border-box;
  }

  /* Center the whole Isotope container within the section */
  #shopify-section-{{section.id}}.blog-portfolio .isotope-grid{
    margin-left:auto; margin-right:auto;
  }

  .dt-sc-main-heading { font-weight: 600; }

  /* ===== FILTER BAR ===== */
  #shopify-section-{{section.id}} .blog-filter{
    display:flex;
    flex-wrap:wrap;
    gap:10px;
    align-items:center;
    justify-content:center;
    margin: 16px 0 28px;
  }
  #shopify-section-{{section.id}} .blog-filter .filter-btn{
    line-height:1;
    cursor:pointer;
    transition: background-color .2s ease, color .2s ease, opacity .2s ease, border-color .2s ease;
  }

  /* Fallback/base active look (JS enforces inline-important) */
  #shopify-section-{{section.id}} .blog-filter .filter-btn.is-active,
  #shopify-section-{{section.id}} .blog-filter .filter-btn[aria-pressed="true"]{
    background-color: var(--filter-active-bg);
    color: var(--filter-active-fg);
    border-color: transparent;
  }

  #shopify-section-{{section.id}} .blog-filter .filter-btn:focus-visible{
