<script src="https://npmcdn.com/isotope-layout@3.0.6/dist/isotope.pkgd.js"></script>
<script src='https://npmcdn.com/imagesloaded@4/imagesloaded.pkgd.js'></script>

{% assign margin = section.settings.margin | split: ',' %}
{% assign margin_top = margin[0] %}
{% assign margin_bottom = margin[1] %}
{% assign padding = section.settings.padding | split: ',' %}
{% assign padding_top = padding[0] %}
{% assign padding_bottom = padding[1] %}

{% case section.settings.grid %}
  {% when '1' %}{% assign column = '100%' %}
  {% when '2' %}{% assign column = '50%' %}
  {% when '3' %}{% assign column = '33.33%' %}
  {% when '4' %}{% assign column = '24.75%' %}
  {% when '5' %}{% assign column = '19.6%' %}
  {% when '6' %}{% assign column = '16.2%' %}
  {% else %}{% assign column = '33.33%' %}
{% endcase %}

{% if section.settings.block_banner_style == 'grid-style' %}
  {% assign item_style = 'grid-style' %}
{% elsif section.settings.block_banner_style == 'list-style' %}
  {% assign verticalStyle = section.settings.vertical_position %}
  {% assign item_style = 'list-style' %}
{% elsif section.settings.block_banner_style == 'overlay-style' %}
  {% assign verticalStyle = section.settings.vertical_position %}
  {% assign item_style = 'overlay-style' %}
{% endif %}

{% if section.settings.enable_overlay %}
  {% assign section_overlay = 'dt-sc-overlay' %}
{% endif %}

{% assign listWidth = section.settings.content_width | split: '/' %}
{% assign leftColumn = listWidth[0] %}
{% assign rightColumn = listWidth[1] %}

{% if section.settings.overlay_style == 'use_overlay' %}
  {% assign overlay_class = 'with-overlay-normal' %}
{% elsif section.settings.overlay_style == 'use_gradient_overlay' %}
  {% assign overlay_class = 'with-overlay-gradient' %}
{% endif %}

{% assign blog = blogs[section.settings.blog] %}
{% if section.settings.show_background_image %}
  {% assign lazyScript = "lazyload" %}
{% endif %}

<div
  data-section-id="{{ section.id }}"
  data-section-type="featured-blog-section"
  data-item-per-view="{{ section.settings.items_per_view }}"
  data-autoplay="{{ section.settings.slider_autoplay }}"
  data-small-screen-items="1"
  data-blocks-limit="{{ section.blocks.size }}"
  data-item-space="{{ section.settings.column_gap }}"
  data-auto-height="{{ section.settings.enable_auto_height }}"
>
  <div class="dt-sc-section-wrapper {{lazyScript}} {{ section_overlay }} {% if section.settings.background_style == 'parallax' %}parallax-initiated{% endif %}"
       {% if section.settings.background_style == 'parallax' %} data-speed="2" data-style="parallax"{% endif %}
       style="{% render 'bg-color-image-padding' %} background-size: {{- section.settings.background_size -}}; {% if section.settings.background_style == 'fixed' %}background-attachment: fixed;{% endif %} background-repeat:{% if section.settings.background_size == 'repeat' %}repeat{% else %}no-repeat;{% endif %}"
       {% include 'bg_image' %}>
    <div class="{% render 'container-settings' %}">
      <div class="row {{ section.settings.custom_class_name }}">
        {% render 'section-heading', class: section.id %}

        {% unless blog.articles_count == 0 %}
          <div class="dt-sc-blog-section isotope-grid">
            {% for article in blogs[section.settings.blog].articles limit: section.settings.post_limit %}
              <div class="isotope-selector dt-sc-blog-item {{ section.settings.text_position }} {{ item_style }} {{ section.settings.vertical_position }}"
                   {% if section.settings.block_banner_style == 'overlay-style' %}style="min-height:{{ section.settings.overlay_style_height }}px"{% endif %}>
                <div class="dt-sc-blog-image {{ overlay_class }}">
                  {% if article.image %}
                    <div class="article__grid-image-wrapper wow animated fadeInDown">
                      {{ article.image | img_url: 'master' | img_tag: article.title, 'article__grid-image' }}
                    </div>
                  {% endif %}
                </div>

                <div class="dt-sc-blog-content">
                  <h6 class="dt-sc-blog-title wow animated fadeInDown"><a href="{{ article.url }}">{{ article.title }}</a></h6>

                  <div class="dt-sc-blog-meta wow animated fadeInDown">
                    {% if section.settings.blog_show_author %}
                      <p class="dt-sc-blog-author">
                        {% include 'icon-author' %}
                        <span>{{ 'blogs.article.by_author' | t: author: article.author }}</span>
                      </p>
                    {% endif %}

                    {% if section.settings.blog_show_date %}
                      <p class="dt-sc-blog-date">
                        {% include 'icon-date' %}
                        {{ article.published_at | time_tag: format: 'date' }}
                      </p>
                    {% endif %}

                    {% if section.settings.blog_comments %}
                      {% if blog.comments_enabled? and article.comments_count > 0 %}
                        <p class="dt-sc-blog-comment">
                          {% include 'icon-comment' %} {{ 'blogs.comments.comments_with_count' | t: count: article.comments_count }}
                        </p>
                      {% endif %}
                    {% endif %}

                    {% if section.settings.blog_show_tag and article.tags.size > 0 %}
                      <p class="dt-sc-blog-tags">
                        {% include 'icon-tag' %}
                        {% for tag in article.tags %}
                          <a href="{{ blog.url }}/tagged/{{ tag | handle }}" class="article__grid-tag">{{ tag }}</a>
                        {% endfor %}
                      </p>
                    {% endif %}
                  </div>

                  {% if section.settings.blog_show_description %}
                    <div class="dt-sc-blog-description wow animated fadeInDown">
                      {% if article.excerpt.size > 0 %}
                        {{ article.excerpt }}
                      {% else %}
                        {{ article.content | strip_html | truncate: 150 }}
                      {% endif %}
                    </div>
                  {% endif %}

                  {% if section.settings.blog_show_button %}
                    <a href="{{ article.url }}" class="dt-sc-btn wow animated fadeInDown">{{ 'blogs.article.read_more' | t }}</a>
                  {% endif %}
                </div>
              </div>
            {% endfor %}
          </div>
        {% endunless %}
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    var $grid = $('.isotope-grid');

    $grid.imagesLoaded(function(){
      $grid.isotope({
        itemSelector: '.isotope-selector',
        percentPosition: true,
        layoutMode: 'masonry',
        fitWidth: true,
        masonry: { gutter: {{ section.settings.gallery_spacing }} }
      });
    });

    var resizeTimer;
    $(window).on('resize orientationchange', function(){
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(function(){ $grid.isotope('layout'); }, 150);
    });
  });
</script>

<style>
  /* No font-family declarations anywhere â€“ uses theme defaults */

  /* Center the whole Isotope container within the section */
  #shopify-section-{{section.id}}.blog-portfolio .isotope-grid{
    margin-left:auto; margin-right:auto;
  }

  /* Base card sizing for Isotope items (desktop) */
  #shopify-section-{{section.id}}.blog-portfolio .isotope-selector{
    position: relative;
    overflow: hidden;
    margin-bottom: {{ section.settings.gallery_spacing }}px;
    width: calc({{ column }} - {{ section.settings.gallery_spacing }}px);
  }

  /* Breakpoints */
  @media only screen and (max-width: 1380px){
    #shopify-section-{{section.id}}.blog-portfolio .isotope-selector{
      width: calc(24.7% - {{ section.settings.gallery_spacing }}px);
    }
  }
  @media only screen and (max-width: 1199px){
    #shopify-section-{{section.id}}.blog-portfolio .isotope-selector{
      width: calc(33.33% - {{ section.settings.gallery_spacing }}px);
    }
  }

  /* ===== MOBILE CENTER ALIGN ===== */
  @media only screen and (max-width: 991px){
    /* Make each item full width so it sits centered (no left bias) */
    #shopify-section-{{section.id}}.blog-portfolio .isotope-selector{
      width: 100% !important;
    }
    /* Center text and controls inside each card */
    #shopify-section-{{section.id}}.blog-portfolio .dt-sc-blog-item .dt-sc-blog-content{ text-align:center; }
    #shopify-section-{{section.id}}.blog-portfolio .dt-sc-blog-item .dt-sc-blog-meta{ text-align:center; }
    #shopify-section-{{section.id}}.blog-portfolio .dt-sc-blog-item .dt-sc-blog-meta p{ display:inline-block; margin: 0 8px 6px; }
    #shopify-section-{{section.id}}.blog-portfolio .dt-sc-blog-item .dt-sc-btn{ display:inline-block; margin-left:auto; margin-right:auto; }
    #shopify-section-{{section.id}}.blog-portfolio .article__grid-image-wrapper img{ display:block; margin:0 auto; }
  }

  /* Colors / overlay */
  #shopify-section-{{section.id}}.blog-portfolio .dt-sc-heading .dt-sc-main-heading{ color:{{ section.settings.section_heading_color }}; }
  #shopify-section-{{section.id}}.blog-portfolio .dt-sc-heading .dt-sc-sub-heading{ color:{{ section.settings.section_sub_heading_color }}; }
  #shopify-section-{{section.id}}.blog-portfolio .dt-sc-heading .dt-sc-heading-description{ color:{{ section.settings.section_description_color }}; }
  #shopify-section-{{section.id}}.blog-portfolio .dt-sc-heading .dt-sc-btn{
    background:{{ section.settings.section_button_bg_color }}; color:{{ section.settings.section_button_text_color }};
  }
  #shopify-section-{{section.id}}.blog-portfolio .dt-sc-heading .dt-sc-btn:hover{
    background:{{ section.settings.section_button_hover_bg_color }}; color:{{ section.settings.section_button_hover_text_color }};
  }

  #shopify-section-{{section.id}}.blog-portfolio .dt-sc-overlay:before{
    color:{{ section.settings.background_color }}; background:currentcolor; opacity:{{ section.settings.overlay_transparency }};
  }

  #shopify-section-{{section.id}}.blog-portfolio .dt-sc-blog-section .dt-sc-blog-item .dt-sc-blog-image.with-overlay-normal:before{
    color:{{ section.settings.overlay_color }}; background:currentcolor; border-radius: var(--DT_Blog_Border_Radius);
  }
  #shopify-section-{{section.id}}.blog-portfolio .dt-sc-blog-section .dt-sc-blog-item .dt-sc-blog-image.with-overlay-gradient:before{
    background-image: linear-gradient({{ section.settings.rotation_degree }}deg, {{ section.settings.overlay_color | color_modify: 'alpha', 0 }}, {{ section.settings.overlay_color }});
    border-radius: var(--DT_Blog_Border_Radius);
  }
  #shopify-section-{{section.id}}.blog-portfolio .dt-sc-blog-section .dt-sc-blog-item:hover .dt-sc-blog-image:before{
    opacity: {{ section.settings.overlay_opacity }};
  }

  #shopify-section-{{section.id}}.blog-portfolio .dt-sc-blog-section .dt-sc-blog-item { {% if section.settings.enable_box_shadow %} box-shadow: var(--DTboxShadow); {% endif %} }

  /* Link + text colors (no font overrides) */
  #shopify-section-{{section.id}}.blog-portfolio .dt-sc-blog-section .dt-sc-blog-item .dt-sc-blog-content a:not(dt-sc-btn){ color: {{section.settings.blog_link_color}}; }
  #shopify-section-{{section.id}}.blog-portfolio .dt-sc-blog-section .dt-sc-blog-item .dt-sc-blog-content a:not(dt-sc-btn):hover{ color: {{section.settings.blog_link_hover_color}}; }

  #shopify-section-{{section.id}}.blog-portfolio .dt-sc-blog-section .dt-sc-blog-item .dt-sc-blog-content .dt-sc-blog-description,
  #shopify-section-{{section.id}}.blog-portfolio .dt-sc-blog-section .dt-sc-blog-item .dt-sc-blog-content .dt-sc-blog-meta *:not(svg){ color: {{section.settings.blog_text_color}}; }
  #shopify-section-{{section.id}}.blog-portfolio .dt-sc-blog-section .dt-sc-blog-item .dt-sc-blog-content .dt-sc-blog-meta p svg{ fill: {{section.settings.blog_icon_color}}; }

  #shopify-section-{{section.id}}.blog-portfolio .dt-sc-blog-section .dt-sc-blog-item .dt-sc-blog-content a.dt-sc-btn{
    background-color: {{section.settings.blog_button_bg_color}}; color: {{section.settings.blog_button_text_color}};
  }
  #shopify-section-{{section.id}}.blog-portfolio .dt-sc-blog-section .dt-sc-blog-item .dt-sc-blog-content a.dt-sc-btn:hover{
    background-color: {{section.settings.blog_button_bg_hover_color}}; color: {{section.settings.blog_button_text_hover_color}};
  }

  /* Overlay-style colors */
  #shopify-section-{{section.id}}.blog-portfolio .dt-sc-blog-section .dt-sc-blog-item.overlay-style .dt-sc-blog-content a:not(dt-sc-btn){ color: {{section.settings.blog_link_color_overlay}}; }
  #shopify-section-{{section.id}}.blog-portfolio .dt-sc-blog-section .dt-sc-blog-item.overlay-style .dt-sc-blog-content a:not(dt-sc-btn):hover{ color: {{section.settings.blog_link_hover_color_overlay}}; }
  #shopify-section-{{section.id}}.blog-portfolio .dt-sc-blog-section .dt-sc-blog-item.overlay-style .dt-sc-blog-content .dt-sc-blog-description,
  #shopify-section-{{section.id}}.blog-portfolio .dt-sc-blog-section .dt-sc-blog-item.overlay-style .dt-sc-blog-content .dt-sc-blog-meta *:not(svg){ color: {{section.settings.blog_text_color_overlay}}; }
  #shopify-section-{{section.id}}.blog-portfolio .dt-sc-blog-section .dt-sc-blog-item.overlay-style .dt-sc-blog-content .dt-sc-blog-meta p svg{ fill: {{section.settings.blog_icon_color_overlay}}; }
  #shopify-section-{{section.id}}.blog-portfolio .dt-sc-blog-section .dt-sc-blog-item.overlay-style .dt-sc-blog-content a.dt-sc-btn{
    background-color: {{section.settings.blog_button_bg_color_overlay}}; color: {{section.settings.blog_button_text_color_overlay}};
  }
  #shopify-section-{{section.id}}.blog-portfolio .dt-sc-blog-section .dt-sc-blog-item.overlay-style .dt-sc-blog-content a.dt-sc-btn:hover{
    background-color: {{section.settings.blog_button_bg_hover_color_overlay}}; color: {{section.settings.blog_button_hover_text_color_overlay }};
  }

  /* Section spacing */
  @media only screen and (min-width: 1200px){
    #shopify-section-{{section.id}}.blog-portfolio .dt-sc-section-wrapper{
      margin-top:{{margin_top}}px; margin-bottom:{{margin_bottom}}px; padding-top:{{padding_top}}px; padding-bottom:{{padding_bottom}}px;
    }
  }
  @media only screen and (max-width: 1199px){
    #shopify-section-{{section.id}}.blog-portfolio .dt-sc-section-wrapper{
      margin-top:{{margin_top | divided_by: 2}}px; margin-bottom:{{margin_bottom}}px;
      padding-top:{{padding_top | divided_by: 2}}px; padding-bottom:{{padding_bottom | divided_by: 2}}px;
    }
  }
</style>

