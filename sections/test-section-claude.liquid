      "default": true
    },
    {
      "type": "image_picker",
      "id": "badge_image",
      "label": "Badge Image",
      "info": "Recommended: Square image, 200x200px minimum"
    },
    {
      "type": "text",
      "id": "badge_alt",
      "label": "Badge Alt Text",
      "info": "Describe what the badge shows (e.g., 'Spicy Love brand logo')",
