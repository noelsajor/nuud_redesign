<!-- Fully Customizable Hero Section Liquid Template -->
<section class="hero-section" 
         style="background-color: {{ section.settings.background_color }}; 
                padding: {{ section.settings.section_padding_top }}px 20px {{ section.settings.section_padding_bottom }}px 20px;">
  <div class="hero-container">
    <!-- Brand Badge -->
    {% if section.settings.show_badge and section.settings.badge_image %}
    <div class="brand-badge">
      <img src="{{ section.settings.badge_image | image_url: width: 200 }}" 
           alt="{{ section.settings.badge_alt | default: 'Brand Badge' }}" 
           class="badge-image"
           style="width: {{ section.settings.badge_size }}px; height: {{ section.settings.badge_size }}px;">
    </div>
    {% endif %}
    
    <!-- Main Content Card -->
    <div class="hero-card" style="border-color: {{ section.settings.border_color }}; 
                                  border-width: {{ section.settings.border_width }}px;
                                  border-radius: {{ section.settings.card_border_radius }}px;
                                  background-color: {{ section.settings.card_background }};">
      <!-- Left Side - Image -->
      <div class="hero-image-container">
        {% if section.settings.hero_image %}
        <img 
          src="{{ section.settings.hero_image | image_url: width: 800 }}" 
          alt="{{ section.settings.hero_image.alt | default: 'Hero Image' }}"
          class="hero-image"
          loading="lazy"
        >
        {% else %}
        <div class="hero-image-placeholder" style="background-color: #f0f0f0;">
          <p>Add your hero image</p>
        </div>
        {% endif %}
      </div>
      
      <!-- Right Side - Content -->
      <div class="hero-content" style="background-color: {{ section.settings.content_background }};">
        {% if section.settings.hero_title != blank %}
        <h1 class="hero-title" 
            style="color: {{ section.settings.title_color }}; 
                   font-size: {{ section.settings.title_size }}px;
                   font-weight: {{ section.settings.title_weight }};">
          {{ section.settings.hero_title }}
        </h1>
        {% endif %}
        
        {% if section.settings.hero_description != blank %}
        <p class="hero-description" 
           style="color: {{ section.settings.description_color }}; 
                  font-size: {{ section.settings.description_size }}px;">
          {{ section.settings.hero_description }}
        </p>
        {% endif %}
        
        {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_url | default: '/collections/all' }}" 
           class="hero-cta-button"
           style="background: {{ section.settings.button_background }}; 
                  color: {{ section.settings.button_text_color }};
                  border-radius: {{ section.settings.button_border_radius }}px;
                  font-size: {{ section.settings.button_text_size }}px;">
          {{ section.settings.button_text }}
        </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
.hero-section {
  position: relative;
  min-height: 600px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero-container {
  position: relative;
  max-width: 960px;
  width: 100%;
  margin: 0 auto;
}

.brand-badge {
  position: absolute;
  top: -30px;
  right: 20px;
  z-index: 10;
}

.badge-image {
  border-radius: 50%;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
}

.hero-card {
  border-style: solid;
  overflow: hidden;
  display: grid;
  grid-template-columns: 1fr 1fr;
  min-height: 500px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

.hero-image-container {
  position: relative;
  overflow: hidden;
}

.hero-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
}

.hero-image-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666;
  font-size: 1.1rem;
}

.hero-content {
  padding: 60px 50px;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.hero-title {
  margin-bottom: 24px;
  line-height: 1.1;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.hero-description {
  line-height: 1.6;
  margin-bottom: 30px;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
}

.hero-cta-button {
  display: inline-block;
  padding: 16px 32px;
  text-decoration: none;
  font-weight: 600;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  align-self: flex-start;
}

.hero-cta-button:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
  text-decoration: none;
}

/* Mobile Responsive */
@media (max-width: 768px) {
  .hero-section {
    padding-left: 15px !important;
    padding-right: 15px !important;
  }
  
  .hero-card {
    grid-template-columns: 1fr;
  }
  
  .hero-content {
    padding: 40px 30px;
  }
  
  .hero-title {
    font-size: calc({{ section.settings.title_size | default: 48 }}px * 0.7) !important;
    margin-bottom: 20px;
  }
  
  .hero-description {
    font-size: calc({{ section.settings.description_size | default: 18 }}px * 0.9) !important;
    margin-bottom: 25px;
  }
  
  .brand-badge {
    top: -20px;
    right: 15px;
  }
  
  .badge-image {
    width: calc({{ section.settings.badge_size | default: 120 }}px * 0.8) !important;
    height: calc({{ section.settings.badge_size | default: 120 }}px * 0.8) !important;
  }
}

@media (max-width: 480px) {
  .hero-content {
    padding: 30px 20px;
  }
  
  .hero-title {
    font-size: calc({{ section.settings.title_size | default: 48 }}px * 0.5) !important;
  }
  
  .hero-description {
    font-size: calc({{ section.settings.description_size | default: 18 }}px * 0.8) !important;
  }
  
  .hero-cta-button {
    padding: 14px 28px;
    font-size: calc({{ section.settings.button_text_size | default: 18 }}px * 0.9) !important;
  }
}
</style>

