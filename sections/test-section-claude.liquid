    {
      "type": "range",
      "id": "badge_size",
      "label": "Badge Size",
      "min": 60,
      "max": 200,
      "step": 10,
      "default": 120,
      "unit": "px"
    },
    {
      "type": "checkbox",
      "id": "badge_spin",
      "label": "Enable Badge Spinning",
      "info": "Animation respects user's motion preferences",
      "default": false
    },
    {
      "type": "range",
