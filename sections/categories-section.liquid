{% assign sec_id = section.id | replace: '_', '' | downcase %}

{% comment %}
Category Showcase — 3 clickable cards
- Hover reveal (matches FAQ feel): subtle lift, accent outline, title underline grows, arrow slides, soft “shine” sweep.
- Image “overflows” above card by configured amount.
- Header (heading/subheading/body) above, “See all” button below.
- Background: color or image with optional overlay.
- Global CTA fallback: pulls from theme settings if available.
{% endcomment %}

<style>
  /* Root */
  .category-showcase-{{ sec_id }} {
    --accent: {{ section.settings.hover_accent_color }};
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    padding-left: {{ section.settings.padding_horizontal }}px;
    padding-right: {{ section.settings.padding_horizontal }}px;
    background-color: {{ section.settings.background_color }};
    position: relative;
    {% if section.settings.background_image %}
      background-image: url('{{ section.settings.background_image | image_url: width: 2000 }}');
      background-size: {{ section.settings.background_size }};
      background-position: {{ section.settings.background_position }};
      background-repeat: no-repeat;
      background-attachment: {{ section.settings.background_attachment }};
    {% endif %}
  }

  /* Background overlay (optional) */
  .category-showcase__background-overlay-{{ sec_id }} {
    position: absolute; inset: 0;
    background-color: {{ section.settings.background_overlay_color }};
    opacity: {{ section.settings.background_overlay_opacity | divided_by: 100.0 }};
    pointer-events: none; z-index: 1;
  }

  /* Container */
  .category-showcase__container-{{ sec_id }} {
    max-width: 1200px;
    margin: 100px auto;
    position: relative; z-index: 2;
  }

  /* Header */
  .category-showcase__header-{{ sec_id }} {
    text-align: {{ section.settings.text_alignment }};
    margin-bottom: {{ section.settings.header_spacing }}px;
  }
  .category-showcase__heading-{{ sec_id }} {
    font-size: {{ section.settings.heading_size }}px;
    color: {{ section.settings.heading_color }};
    margin: 0 0 {{ section.settings.heading_margin }}px 0;
    font-weight: 600;
  }
  .category-showcase__subheading-{{ sec_id }} {
    font-size: {{ section.settings.subheading_size }}px;
    color: {{ section.settings.subheading_color }};
    margin: 0 0 {{ section.settings.subheading_margin }}px 0;
    font-weight: 500;
  }
  .category-showcase__body-text-{{ sec_id }} {
    font-size: {{ section.settings.body_text_size }}px;
    color: {{ section.settings.body_text_color }};
    line-height: 1.6;
    margin: 0;
    max-width: 600px;
    {% if section.settings.text_alignment == 'center' %}
      margin-left: auto; margin-right: auto;
    {% endif %}
  }

  /* Grid */
  .category-showcase__grid-{{ sec_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
    align-items: flex-start;
    margin-top: {{ section.settings.image_overflow }}px;
  }

  /* Card */
  .category-showcase__item-{{ sec_id }} {
    position: relative;
    border-radius: {{ section.settings.border_radius }}px;
    overflow: visible;
    cursor: pointer;
    transition: transform .35s ease, box-shadow .35s ease, outline-color .35s ease;
    background-color: {{ section.settings.card_background }};
    height: 350px;
    display: flex; flex-direction: column;
    text-decoration: none;
    margin-top: {{ section.settings.image_overflow }}px;
    outline: 2px solid transparent;
  }

  /* FAQ-like hover accent: lift + outline + shine sweep */
  .category-showcase__item-{{ sec_id }}::after {
    content: "";
    position: absolute; inset: 0;
    border-radius: inherit;
    pointer-events: none;
    background: linear-gradient(60deg, rgba(255,255,255,0) 0%, rgba(255,255,255,.35) 50%, rgba(255,255,255,0) 100%);
    transform: translateX(-140%);
    transition: transform .6s ease;
    mix-blend-mode: screen;
  }
  .category-showcase__item-{{ sec_id }}:hover {
    transform: translateY(-6px);
    box-shadow: 0 16px 36px rgba(0,0,0,.14);
    outline-color: var(--accent);
  }
  .category-showcase__item-{{ sec_id }}:hover::after { transform: translateX(140%); }

  /* Image wrapper with overflow up */
  .category-showcase__image-wrapper-{{ sec_id }} {
    position: relative;
    height: calc(100% + {{ section.settings.image_overflow }}px);
    overflow: hidden;
    border-radius: {{ section.settings.border_radius }}px;
    margin-top: -{{ section.settings.image_overflow }}px;
    z-index: 2;
  }
  .category-showcase__image-{{ sec_id }} {
    width: 100%; height: 100%;
    object-fit: cover;
    transition: transform .4s ease;
    display: block;
  }
  .category-showcase__item-{{ sec_id }}:hover .category-showcase__image-{{ sec_id }} { transform: scale(1.05); }

  /* Placeholder */
  .category-showcase__image-placeholder-{{ sec_id }} {
    width: 100%; height: 100%;
    background-color: #f4f4f4;
    display: flex; align-items: center; justify-content: center;
    position: relative;
    border-radius: {{ section.settings.border_radius }}px;
  }
  .category-showcase__image-placeholder-{{ sec_id }} svg { width: 80px; height: 80px; color: #ccc; }

  /* Hover overlay content (hidden until hover) */
  .category-showcase__overlay-{{ sec_id }} {
    position: absolute; inset: 0;
    background: linear-gradient(to bottom, transparent 0%, rgba(0,0,0,.6) 100%);
    opacity: 0; transition: opacity .35s ease;
    display: flex; flex-direction: column; justify-content: center; align-items: center;
    text-align: center; padding: 25px;
    border-radius: {{ section.settings.border_radius }}px;
  }
  .category-showcase__item-{{ sec_id }}:hover .category-showcase__overlay-{{ sec_id }} { opacity: 1; }

  /* Title + underline grow (FAQ vibe) */
  .category-showcase__title-{{ sec_id }} {
    font-size: {{ section.settings.title_size }}px;
    font-weight: 600;
    margin-bottom: 10px;
    color: {{ section.settings.title_color }};
    transform: translateY(12px);
    transition: transform .35s ease;
    position: relative;
  }
  .category-showcase__title-{{ sec_id }}::after {
    content: "";
    position: absolute; left: 50%; bottom: -6px;
    width: 0; height: 2px; background: var(--accent);
    transform: translateX(-50%);
    transition: width .35s ease;
  }
  .category-showcase__item-{{ sec_id }}:hover .category-showcase__title-{{ sec_id }} {
    transform: translateY(0);
  }
  .category-showcase__item-{{ sec_id }}:hover .category-showcase__title-{{ sec_id }}::after {
    width: 60%;
  }

  /* Description + CTA arrow slide (already close to FAQ style) */
  .category-showcase__description-{{ sec_id }} {
    font-size: {{ section.settings.description_size }}px;
    color: {{ section.settings.description_color }};
    line-height: 1.5; margin-bottom: 15px;
    transform: translateY(12px);
    transition: transform .35s ease .05s;
  }
  .category-showcase__item-{{ sec_id }}:hover .category-showcase__description-{{ sec_id }} { transform: translateY(0); }

  .category-showcase__cta-{{ sec_id }} {
    display: inline-flex; align-items: center; gap: 8px;
    color: {{ section.settings.cta_color }};
    font-size: 14px; font-weight: 500; text-decoration: none;
    transform: translateY(12px);
    transition: transform .35s ease .1s, color .25s ease;
  }
  .category-showcase__item-{{ sec_id }}:hover .category-showcase__cta-{{ sec_id }} {
    transform: translateY(0); color: {{ section.settings.cta_hover_color }};
  }
  .category-showcase__cta-arrow-{{ sec_id }} { transition: transform .3s ease; }
  .category-showcase__item-{{ sec_id }}:hover .category-showcase__cta-arrow-{{ sec_id }} { transform: translateX(6px); }

  /* Empty helper */
  .category-showcase__empty-state-{{ sec_id }} {
    position: absolute; bottom: 10px; left: 50%;
    transform: translateX(-50%);
    font-size: 12px; color: #999; text-align: center; pointer-events: none;
  }

  /* Footer (See all) */
  .category-showcase__footer-{{ sec_id }} {
    text-align: {{ section.settings.text_alignment }};
    margin-top: {{ section.settings.button_margin }}px;
  }
  .category-showcase__see-all-button-{{ sec_id }} {
    display: inline-flex; align-items: center; gap: 8px;
    padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
    background-color: {{ section.settings.button_bg_color }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ section.settings.button_border_radius }}px;
    font-size: {{ section.settings.button_text_size }}px;
    font-weight: 500;
    transition: all .3s ease;
    border: {{ section.settings.button_border_width }}px solid {{ section.settings.button_border_color }};
  }
  .category-showcase__see-all-button-{{ sec_id }}:hover {
    background-color: {{ section.settings.button_bg_hover_color }};
    color: {{ section.settings.button_text_hover_color }};
    border-color: {{ section.settings.button_border_hover_color }};
    transform: translateY(-2px);
  }
  .category-showcase__button-arrow-{{ sec_id }} { transition: transform .3s ease; }
  .category-showcase__see-all-button-{{ sec_id }}:hover .category-showcase__button-arrow-{{ sec_id }} { transform: translateX(3px); }

  /* Responsive */
  @media screen and (max-width: 768px) {
    .category-showcase-{{ sec_id }} {
      padding-left: {{ section.settings.padding_horizontal | times: 0.5 }}px;
      padding-right: {{ section.settings.padding_horizontal | times: 0.5 }}px;
    }
    .category-showcase__grid-{{ sec_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
      margin-top: {{ section.settings.image_overflow | times: 0.7 }}px;
    }
    .category-showcase__item-{{ sec_id }} {
      height: 300px;
      margin-top: {{ section.settings.image_overflow | times: 0.7 }}px;
    }
    .category-showcase__image-wrapper-{{ sec_id }} {
      height: calc(100% + {{ section.settings.image_overflow | times: 0.7 }}px);
      margin-top: -{{ section.settings.image_overflow | times: 0.7 }}px;
    }
    .category-showcase__heading-{{ sec_id }} { font-size: {{ section.settings.heading_size | times: 0.8 }}px; }
    .category-showcase__subheading-{{ sec_id }} { font-size: {{ section.settings.subheading_size | times: 0.9 }}px; }
  }
</style>

{%- comment -%}
Global CTA fallback chain:
1) settings.global_cta_text
2) settings.remembered_all_products_cta
3) section setting see_all_text
{%- endcomment -%}
{% assign cta_all = settings.global_cta_text | default: settings.remembered_all_products_cta | default: section.settings.see_all_text %}

<category-showcase-{{ sec_id }} class="category-showcase-{{ sec_id }}" {{ section.shopify_attributes }}>
  {% if section.settings.background_image and section.settings.background_overlay_opacity > 0 %}
    <div class="category-showcase__background-overlay-{{ sec_id }}"></div>
  {% endif %}

  <div class="category-showcase__container-{{ sec_id }}">
    {% if section.settings.heading != blank or section.settings.subheading != blank or section.settings.body_text != blank %}
      <div class="category-showcase__header-{{ sec_id }}">
        {% if section.settings.heading != blank %}
          <h2 class="category-showcase__heading-{{ sec_id }}">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.subheading != blank %}
          <h3 class="category-showcase__subheading-{{ sec_id }}">{{ section.settings.subheading }}</h3>
        {% endif %}
        {% if section.settings.body_text != blank %}
          <div class="category-showcase__body-text-{{ sec_id }}">{{ section.settings.body_text }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="category-showcase__grid-{{ sec_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign collection_key   = 'category_' | append: i | append: '_collection'
          assign title_key        = 'category_' | append: i | append: '_title'
          assign description_key  = 'category_' | append: i | append: '_description'
          assign image_key        = 'category_' | append: i | append: '_image'

          assign collection  = section.settings[collection_key]
          assign title       = section.settings[title_key]
          assign description = section.settings[description_key]
          assign image       = section.settings[image_key]

          if collection != blank
            assign category_url   = collection.url
            assign category_title = collection.title
          else
            assign category_url   = '#'
            assign category_title = title
          endif

          if title != blank
            assign display_title = title
          else
            assign display_title = category_title
          endif
        %}

        <a href="{{ category_url }}" class="category-showcase__item-{{ sec_id }}" data-category="{{ i }}">
          <div class="category-showcase__image-wrapper-{{ sec_id }}">
            {% if image %}
              <img
                src="{{ image | image_url: width: 900 }}"
                alt="{{ image.alt | escape }}"
                class="category-showcase__image-{{ sec_id }}"
                loading="lazy"
                width="{{ image.width }}"
                height="{{ image.height }}"
              >
            {% elsif collection and collection.featured_image %}
              <img
                src="{{ collection.featured_image | image_url: width: 900 }}"
                alt="{{ collection.featured_image.alt | escape }}"
                class="category-showcase__image-{{ sec_id }}"
                loading="lazy"
                width="{{ collection.featured_image.width }}"
                height="{{ collection.featured_image.height }}"
              >
            {% else %}
              <div class="category-showcase__image-placeholder-{{ sec_id }}">
                {{ 'collection-1' | placeholder_svg_tag }}
                {% if collection == blank and title == blank %}
                  <div class="category-showcase__empty-state-{{ sec_id }}">Add a collection or title</div>
                {% endif %}
              </div>
            {% endif %}

            <div class="category-showcase__overlay-{{ sec_id }}">
              {% if display_title != blank %}
                <h3 class="category-showcase__title-{{ sec_id }}">{{ display_title }}</h3>
              {% endif %}
              {% if description != blank %}
                <p class="category-showcase__description-{{ sec_id }}">{{ description }}</p>
              {% endif %}
              <span class="category-showcase__cta-{{ sec_id }}">
                {{ section.settings.cta_text }}
                <span class="category-showcase__cta-arrow-{{ sec_id }}">→</span>
              </span>
            </div>
          </div>
        </a>
      {% endfor %}
    </div>

    {% if section.settings.see_all_link != blank %}
      <div class="category-showcase__footer-{{ sec_id }}">
        <a href="{{ section.settings.see_all_link }}" class="category-showcase__see-all-button-{{ sec_id }}">
          {{ cta_all }}
          <span class="category-showcase__button-arrow-{{ sec_id }}">→</span>
        </a>
      </div>
    {% endif %}
  </div>
</category-showcase-{{ sec_id }}>

<script>
  (function() {
    class CategoryShowcase{{ sec_id }} extends HTMLElement {
      connectedCallback() {
        this.items = this.querySelectorAll('.category-showcase__item-{{ sec_id }}');
        this.setupAnimation();
      }
      setupAnimation() {
        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              this.animateItems();
              observer.unobserve(entry.target);
            }
          });
        }, { threshold: 0.1 });
        observer.observe(this);
      }
      animateItems() {
        this.items.forEach((item, index) => {
          item.style.opacity = '0';
          item.style.transform = 'translateY(30px)';
          item.style.transition = 'opacity .6s ease, transform .6s ease';
          setTimeout(() => {
            item.style.opacity = '1';
            item.style.transform = 'translateY(0)';
          }, index * 150);
        });
      }
    }
    customElements.define('category-showcase-{{ sec_id }}', CategoryShowcase{{ sec_id }});
  })();
</script>

