{% comment %}
Categories Showcase – 3 clickable category cards with hover-only overlay,
image overflow, adjustable padding/background, and optional fixed aspect ratio.
Structured similar to other sections: wrapper → container → row → content.
{% endcomment %}

<div
  data-section-id="{{ section.id }}"
  data-section-type="categories-section"
  data-blocks-limit="3"
  class="index-section home-category-block"
>
  <div
    class="dt-sc-section-wrapper {% if section.settings.background_style == 'parallax' %}parallax-initiated{% endif %}"
    style="
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      padding-left: {{ section.settings.padding_horizontal }}px;
      padding-right: {{ section.settings.padding_horizontal }}px;
      background-color: {{ section.settings.background_color }};
      {% if section.settings.background_image %}
        background-image: url('{{ section.settings.background_image | image_url: width: 2000 }}');
        background-size: {{ section.settings.background_size }};
        background-position: {{ section.settings.background_position }};
        background-repeat: no-repeat;
        {% if section.settings.background_style == 'fixed' %}background-attachment: fixed;{% endif %}
      {% endif %}
    "
    {% if section.settings.background_style == 'parallax' %} data-speed="2" data-style="parallax"{% endif %}
  >
    {% if section.settings.background_image and section.settings.background_overlay_opacity > 0 %}
      <div class="category-showcase__background-overlay"></div>
    {% endif %}

    <div class="{% render 'container-settings' %}">
      <div class="row {{ section.settings.custom_class_name }}">

        {%- comment -%}
          Local section header (kept here to avoid pulling in a button from the shared heading snippet).
        {%- endcomment -%}
        {% if section.settings.heading != blank or section.settings.subheading != blank or section.settings.body_text != blank %}
          <div class="category-showcase__header" data-align="{{ section.settings.text_alignment }}">
            {% if section.settings.heading != blank %}
              <h2 class="category-showcase__heading">{{ section.settings.heading }}</h2>
            {% endif %}
            {% if section.settings.subheading != blank %}
              <h3 class="category-showcase__subheading">{{ section.settings.subheading }}</h3>
            {% endif %}
            {% if section.settings.body_text != blank %}
              <div class="category-showcase__body-text">{{ section.settings.body_text }}</div>
            {% endif %}
          </div>
        {% endif %}

        <div class="category-showcase__grid">
          {% for i in (1..3) %}
            {% liquid
              assign collection_key   = 'category_' | append: i | append: '_collection'
              assign title_key        = 'category_' | append: i | append: '_title'
              assign description_key  = 'category_' | append: i | append: '_description'
              assign image_key        = 'category_' | append: i | append: '_image'

              assign collection   = section.settings[collection_key]
              assign custom_title = section.settings[title_key]
              assign description  = section.settings[description_key]
              assign image        = section.settings[image_key]

              if collection != blank
                assign category_url = collection.url
                assign category_title = collection.title
              else
                assign category_url = '#'
                assign category_title = custom_title
              endif

              if custom_title != blank
                assign display_title = custom_title
              else
                assign display_title = category_title
              endif
            %}

            <a href="{{ category_url }}" class="category-card" data-category="{{ i }}">
              <div class="category-card__image-wrap">
                {% if image %}
                  <img
                    src="{{ image | image_url: width: 900 }}"
                    srcset="
                      {{ image | image_url: width: 480 }} 480w,
                      {{ image | image_url: width: 720 }} 720w,
                      {{ image | image_url: width: 900 }} 900w,
                      {{ image | image_url: width: 1200 }} 1200w
                    "
                    sizes="(max-width: 768px) 100vw, 33vw"
                    alt="{{ image.alt | escape }}"
                    class="category-card__image"
                    loading="lazy"
                    width="{{ image.width }}"
                    height="{{ image.height }}"
                  >
                {% elsif collection and collection.featured_image %}
                  <img
                    src="{{ collection.featured_image | image_url: width: 900 }}"
                    srcset="
                      {{ collection.featured_image | image_url: width: 480 }} 480w,
                      {{ collection.featured_image | image_url: width: 720 }} 720w,
                      {{ collection.featured_image | image_url: width: 900 }} 900w,
                      {{ collection.featured_image | image_url: width: 1200 }} 1200w
                    "
                    sizes="(max-width: 768px) 100vw, 33vw"
                    alt="{{ collection.featured_image.alt | escape }}"
                    class="category-card__image"
                    loading="lazy"
                    width="{{ collection.featured_image.width }}"
                    height="{{ collection.featured_image.height }}"
                  >
                {% else %}
                  <div class="category-card__image-placeholder">
                    {{ 'collection-1' | placeholder_svg_tag }}
                    {% if collection == blank and custom_title == blank %}
                      <div class="category-card__empty-state">Add a collection or title</div>
                    {% endif %}
                  </div>
                {% endif %}

                <div class="category-card__overlay">
                  {% if display_title != blank %}
                    <h3 class="category-card__title">{{ display_title }}</h3>
                  {% endif %}
                  {% if description != blank %}
                    <p class="category-card__description">{{ description }}</p>
                  {% endif %}
                  <span class="category-card__cta">
                    {{ section.settings.cta_text }}
                    <span class="category-card__cta-arrow">→</span>
                  </span>
                </div>
              </div>
            </a>
          {% endfor %}
        </div>

        {% if section.settings.see_all_text != blank and section.settings.see_all_link != blank %}
          <div class="category-showcase__footer" data-align="{{ section.settings.text_alignment }}">
            <a href="{{ section.settings.see_all_link }}" class="category-showcase__see-all-button">
              {{ section.settings.see_all_text }}
              <span class="category-showcase__button-arrow">→</span>
            </a>
          </div>
        {% endif %}

      </div>
    </div>
  </div>
</div>

<style>
/* ---------- Scoped to this section ---------- */
#shopify-section-{{ section.id }}.home-category-block{
  --overflow: {{ section.settings.image_overflow }}px;
  --radius: {{ section.settings.border_radius }}px;
  --align: {{ section.settings.text_alignment }};
  --title-color: {{ section.settings.title_color }};
  --desc-color: {{ section.settings.description_color }};
  --cta-color: {{ section.settings.cta_color }};
  --cta-hover: {{ section.settings.cta_hover_color }};
  --btn-bg: {{ section.settings.button_bg_color }};
  --btn-text: {{ section.settings.button_text_color }};
  --btn-bg-hover: {{ section.settings.button_bg_hover_color }};
  --btn-text-hover: {{ section.settings.button_text_hover_color }};
  --btn-border: {{ section.settings.button_border_color }};
  --btn-border-hover: {{ section.settings.button_border_hover_color }};

  /* Card aspect ratio */
  --card-aspect: {% if section.settings.card_aspect_ratio == 'none' %}auto{% else %}{{ section.settings.card_aspect_ratio }}{% endif %};
}

/* Background overlay layer */
#shopify-section-{{ section.id }}.home-category-block .category-showcase__background-overlay{
  position:absolute; inset:0;
  background-color: {{ section.settings.background_overlay_color }};
  opacity: {{ section.settings.background_overlay_opacity | divided_by: 100.0 }};
  pointer-events:none; z-index:1;
}

/* Header */
#shopify-section-{{ section.id }}.home-category-block .category-showcase__header{
  text-align: var(--align);
  margin-bottom: {{ section.settings.header_spacing }}px;
}
#shopify-section-{{ section.id }}.home-category-block .category-showcase__heading{
  font-size: {{ section.settings.heading_size }}px;
  color: {{ section.settings.heading_color }};
  margin: 0 0 {{ section.settings.heading_margin }}px 0;
  font-weight: 600;
}
#shopify-section-{{ section.id }}.home-category-block .category-showcase__subheading{
  font-size: {{ section.settings.subheading_size }}px;
  color: {{ section.settings.subheading_color }};
  margin: 0 0 {{ section.settings.subheading_margin }}px 0;
  font-weight: 500;
}
#shopify-section-{{ section.id }}.home-category-block .category-showcase__body-text{
  font-size: {{ section.settings.body_text_size }}px;
  color: {{ section.settings.body_text_color }};
  line-height: 1.6; margin: 0; max-width: 600px;
  {% if section.settings.text_alignment == 'center' %}margin-left:auto; margin-right:auto;{% endif %}
}

/* Grid */
#shopify-section-{{ section.id }}.home-category-block .category-showcase__grid{
  display:grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap:30px; align-items:start; margin-top: var(--overflow);
}

/* Card */
#shopify-section-{{ section.id }}.home-category-block .category-card{
  position:relative; display:flex; flex-direction:column; text-decoration:none;
  background: {{ section.settings.card_background }};
  border-radius: var(--radius); overflow:visible; cursor:pointer;
  transition: transform .4s ease, box-shadow .4s ease;
  margin-top: var(--overflow);
  {% if section.settings.card_aspect_ratio != 'none' %}
    aspect-ratio: var(--card-aspect);
  {% else %}
    height: 350px;
  {% endif %}
}
#shopify-section-{{ section.id }}.home-category-block .category-card:hover{
  transform: translateY(-8px); box-shadow: 0 20px 40px rgba(0,0,0,.15);
}

/* Image wrapper & image */
#shopify-section-{{ section.id }}.home-category-block .category-card__image-wrap{
  position:relative; height: calc(100% + var(--overflow));
  margin-top: calc(-1 * var(--overflow));
  overflow:hidden; border-radius: var(--radius); z-index:2;
}
#shopify-section-{{ section.id }}.home-category-block .category-card__image{
  width:100%; height:100%; display:block;
  object-fit: {{ section.settings.image_fit }};
  transition: transform .4s ease;
}
#shopify-section-{{ section.id }}.home-category-block .category-card:hover .category-card__image{ transform: scale(1.05); }

#shopify-section-{{ section.id }}.home-category-block .category-card__image-placeholder{
  width:100%; height:100%; background:#f4f4f4;
  display:flex; align-items:center; justify-content:center; position:relative; border-radius: var(--radius);
}
#shopify-section-{{ section.id }}.home-category-block .category-card__image-placeholder svg{ width:80px; height:80px; color:#ccc; }
#shopify-section-{{ section.id }}.home-category-block .category-card__empty-state{
  position:absolute; bottom:10px; left:50%; transform:translateX(-50%); font-size:12px; color:#999; pointer-events:none; text-align:center;
}

/* Hover-only overlay */
#shopify-section-{{ section.id }}.home-category-block .category-card__overlay{
  position:absolute; inset:0;
  background: linear-gradient(to bottom, transparent 0%, rgba(0,0,0,.6) 100%);
  opacity:0; transition: opacity .4s ease;
  display:flex; flex-direction:column; justify-content:center; align-items:center;
  text-align:center; padding:25px; border-radius: var(--radius);
}
#shopify-section-{{ section.id }}.home-category-block .category-card:hover .category-card__overlay,
#shopify-section-{{ section.id }}.home-category-block .category-card:focus-visible .category-card__overlay{
  opacity:1;
}

/* Overlay content */
#shopify-section-{{ section.id }}.home-category-block .category-card__title{
  font-size: {{ section.settings.title_size }}px; font-weight:600; margin-bottom:10px;
  color: var(--title-color); transform: translateY(20px); transition: transform .4s ease;
}
#shopify-section-{{ section.id }}.home-category-block .category-card:hover .category-card__title{ transform: translateY(0); }

#shopify-section-{{ section.id }}.home-category-block .category-card__description{
  font-size: {{ section.settings.description_size }}px; color: var(--desc-color); line-height:1.5;
  margin-bottom:15px; transform: translateY(20px); transition: transform .4s ease .1s;
}
#shopify-section-{{ section.id }}.home-category-block .category-card:hover .category-card__description{ transform: translateY(0); }

#shopify-section-{{ section.id }}.home-category-block .category-card__cta{
  display:inline-flex; align-items:center; gap:8px; color: var(--cta-color);
  font-size:14px; font-weight:500; text-decoration:none; transform: translateY(20px);
  transition: transform .4s ease .2s, color .3s ease;
}
#shopify-section-{{ section.id }}.home-category-block .category-card:hover .category-card__cta{
  transform: translateY(0); color: var(--cta-hover);
}
#shopify-section-{{ section.id }}.home-category-block .category-card__cta-arrow{ transition: transform .3s ease; }
#shopify-section-{{ section.id }}.home-category-block .category-card:hover .category-card__cta-arrow{ transform: translateX(5px); }

/* Footer button */
#shopify-section-{{ section.id }}.home-category-block .category-showcase__footer{
  text-align: var(--align); margin-top: {{ section.settings.button_margin }}px;
}
#shopify-section-{{ section.id }}.home-category-block .category-showcase__see-all-button{
  display:inline-flex; align-items:center; gap:8px;
  padding: {{ section.settings.button_padding_vertical }}px {{ section.settings.button_padding_horizontal }}px;
  background: var(--btn-bg); color: var(--btn-text); text-decoration:none;
  border-radius: {{ section.settings.button_border_radius }}px;
  font-size: {{ section.settings.button_text_size }}px; font-weight:500;
  border: {{ section.settings.button_border_width }}px solid var(--btn-border);
  transition: all .3s ease;
}
#shopify-section-{{ section.id }}.home-category-block .category-showcase__see-all-button:hover{
  background: var(--btn-bg-hover); color: var(--btn-text-hover);
  border-color: var(--btn-border-hover);
  transform: translateY(-2px);
}
#shopify-section-{{ section.id }}.home-category-block .category-showcase__button-arrow{ transition: transform .3s ease; }
#shopify-section-{{ section.id }}.home-category-block .category-showcase__see-all-button:hover .category-showcase__button-arrow{ transform: translateX(3px); }

/* Mobile tweaks */
@media (max-width: 768px){
  #shopify-section-{{ section.id }}.home-category-block .category-showcase__grid{
    grid-template-columns: 1fr; gap:20px; margin-top: calc(var(--overflow) * .7);
  }
  #shopify-section-{{ section.id }}.home-category-block .category-card{
    {% if section.settings.card_aspect_ratio == 'none' %} height:300px; {% endif %}
    margin-top: calc(var(--overflow) * .7);
  }
  #shopify-section-{{ section.id }}.home-category-block .category-card__image-wrap{
    height: calc(100% + (var(--overflow) * .7));
    margin-top: calc(-1 * var(--overflow) * .7);
  }
  #shopify-section-{{ section.id }}.home-category-block .category-showcase__heading{
    font-size: {{ section.settings.heading_size | times: 0.8 }}px;
  }
  #shopify-section-{{ section.id }}.home-category-block .category-showcase__subheading{
    font-size: {{ section.settings.subheading_size | times: 0.9 }}px;
  }
}

@media (max-width: 768px){
  .best-sellers-{{ bs_uid }} .collection-badge{
    /* stop pinning to the corner on mobile */
    position: static !important;
    top: auto; right: auto; left: auto;
    /* center above the heading */
    display: flex; justify-content: center;
    margin: 0 auto 12px;      /* space under the badge */
    z-index: auto;
  }

  /* optional: tighten header spacing if needed */
  .best-sellers-{{ bs_uid }} .section-header{
    margin-top: 0;
  }
}



/* Motion safety */
@media (prefers-reduced-motion: reduce){
  #shopify-section-{{ section.id }}.home-category-block .category-card,
  #shopify-section-{{ section.id }}.home-category-block .category-card__image,
  #shopify-section-{{ section.id }}.home-category-block .category-card__overlay,
  #shopify-section-{{ section.id }}.home-category-block .category-card__title,
  #shopify-section-{{ section.id }}.home-category-block .category-card__description,
  #shopify-section-{{ section.id }}.home-category-block .category-card__cta{
    transition: none !important;
  }
}
</style>

<script>
  (function(){
    const root = document.querySelector('#shopify-section-{{ section.id }}.home-category-block');
    if(!root) return;

    const items = root.querySelectorAll('.category-card');
    if(!('IntersectionObserver' in window) || items.length === 0) return;

    const animateIn = () => {
      items.forEach((item, i) => {
        item.style.opacity = '0';
        item.style.transform = 'translateY(30px)';
        item.style.transition = 'opacity .6s ease, transform .6s ease';
        setTimeout(() => {
          item.style.opacity = '1';
          item.style.transform = 'translateY(0)';
        }, i * 150);
      });
    };

    const io = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if(entry.isIntersecting){
          animateIn();
          io.disconnect();
        }
      });
    }, { threshold: 0.1 });

    io.observe(root);
  })();
</script>

