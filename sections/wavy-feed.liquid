.insta-slide {
  scroll-snap-align: start;
  position: relative;
  border-radius: {{ section.settings.card_radius }}px;
  overflow: hidden;
  background: {{ section.settings.card_bg }};
  flex: 0 0 calc(100% / var(--vis)); /* exact # visible */
